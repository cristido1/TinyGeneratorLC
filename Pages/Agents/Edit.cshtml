@page
@model TinyGenerator.Pages.Agents.EditModel


<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Edit Agent</h2>
    <a class="btn btn-outline-secondary" asp-page="/Agents/FallbackModels"><i class="bi bi-diagram-3 me-1"></i>Fallback models</a>
</div>

<form method="post">
    <input type="hidden" asp-for="Agent.Id" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Agent.Name" class="form-control" />
            <span asp-validation-for="Agent.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Role</label>
            @{ 
                var roles = new List<string> { "coordinator", "writer", "story_evaluator", "musician", "sfx", "ambient", "tts_json","tts_voice", "mixer", "canon_extractor", "state_delta_builder", "continuity_validator", "state_updater", "state_compressor", "recap_builder" };
                if (!string.IsNullOrWhiteSpace(Model.Agent.Role) && !roles.Contains(Model.Agent.Role)) { roles.Insert(0, Model.Agent.Role); }
            }
            <select asp-for="Agent.Role" class="form-select">
                @foreach (var r in roles)
                {
                    <option value="@r" selected="@(r == Model.Agent.Role ? "selected" : null)">@r</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-8">
            <label class="form-label">Model (optional)</label>
            <select asp-for="Agent.ModelId" class="form-select">
                <option value="">-- none --</option>
                @foreach (var m in Model.Models)
                {
                    <option value="@m.Id" selected="@((Model.Agent.ModelId.HasValue && Model.Agent.ModelId.Value == m.Id) ? "selected" : null)">@m.Name @((!string.IsNullOrWhiteSpace(m.Provider)) ? "(" + m.Provider + ")" : "") @(m.Speed.HasValue ? "(sp:" + m.Speed.ToString() + ")" : "(sp:-)")</option>
                }
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-center">
            <div class="form-check">
                <input asp-for="Agent.IsActive" class="form-check-input" />
                <label asp-for="Agent.IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Temperature (0.0 - 2.0)</label>
            <input asp-for="Agent.Temperature" class="form-control" type="number" step="0.01" min="0" max="2" placeholder="es. 0.7" />
            <small class="form-text text-muted">Il parametro 'temperature' per i modelli (nullable).</small>
        </div>
        <div class="col-md-6">
            <label class="form-label">Top P (0.0 - 1.0)</label>
            <input asp-for="Agent.TopP" class="form-control" type="number" step="0.01" min="0" max="1" placeholder="es. 0.95" />
            <small class="form-text text-muted">Top-p (nucleus) sampling (nullable).</small>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Repeat Penalty</label>
            <input asp-for="Agent.RepeatPenalty" class="form-control" type="number" step="0.01" min="0" placeholder="es. 1.1" />
            <small class="form-text text-muted">Penalita ripetizione (nullable).</small>
        </div>
        <div class="col-md-6">
            <label class="form-label">Top K</label>
            <input asp-for="Agent.TopK" class="form-control" type="number" step="1" min="0" placeholder="es. 40" />
            <small class="form-text text-muted">Top-k sampling (nullable).</small>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Repeat Last N</label>
            <input asp-for="Agent.RepeatLastN" class="form-control" type="number" step="1" min="0" placeholder="es. 64" />
            <small class="form-text text-muted">repeat_last_n (nullable).</small>
        </div>
        <div class="col-md-6">
            <label class="form-label">Num Predict</label>
            <input asp-for="Agent.NumPredict" class="form-control" type="number" step="1" min="0" placeholder="es. 512" />
            <small class="form-text text-muted">num_predict (nullable).</small>
        </div>
    </div>
    <div class="row mb-3" style="display: none;">
        <div class="col-md-6">
            <label class="form-label">Voice (optional)</label>
            <select asp-for="Agent.VoiceId" class="form-select">
                <option value="">-- none --</option>
                @foreach (var v in Model.Voices)
                {
                    <option value="@v.Id" selected="@(v.Id == Model.Agent.VoiceId ? "selected" : null)">@v.Name @((!string.IsNullOrWhiteSpace(v.Model)) ? "(" + v.Model + ")" : "")</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Multi-Step Template (optional)</label>
            <select asp-for="Agent.MultiStepTemplateId" class="form-select">
                <option value="">-- none --</option>
                @foreach (var t in Model.StepTemplates)
                {
                    <option value="@t.Id" selected="@(t.Id == Model.Agent.MultiStepTemplateId ? "selected" : null)">@t.Name (@t.TaskType)</option>
                }
            </select>
            <small class="form-text text-muted">Abilita generazione multi-step con questo template.</small>
        </div>
    </div>
    <div class="row mb-3 lg-2" style="display:none;">
        <div class="col-md-12">
            <label class="form-label">Skills</label>
            <select asp-for="SelectedSkills" multiple class="form-control chosen-select" id="agent_skills" name="SelectedSkills">
                @foreach (var s in Model.AvailableSkills)
                {
                    if (Model.SelectedSkills != null && Model.SelectedSkills.Contains(s))
                    {
                        <option value="@s" selected>@s</option>
                    }
                    else
                    {
                        <option value="@s">@s</option>
                    }
                }
            </select>
            <small class="form-text text-muted">Seleziona le skill consentite per questo agente. Verranno salvate come array JSON.</small>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Instructions</label>
        <textarea asp-for="Agent.Instructions" class="form-control" rows="10"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Prompt</label>
        <textarea asp-for="Agent.Prompt" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3" style="display: none;">
        <label class="form-label">JSON Response Format</label>
        <input asp-for="Agent.JsonResponseFormat" class="form-control" placeholder="es. full_evaluation.json" />
        <small class="form-text text-muted">Nome del file schema JSON in response_formats/ per structured output (opzionale)</small>
    </div>
    <div class="mb-3" style="display: none;">
        <label class="form-label">Execution Plan (JSON or text)</label>
        <textarea asp-for="Agent.ExecutionPlan" class="form-control" rows="4"></textarea>
    </div>
    <div class="mb-3" style="display: none;">
        <label class="form-label">Config (JSON)</label>
        <textarea asp-for="Agent.Config" class="form-control" rows="4"></textarea>
    </div>
    <!-- Active moved up next to Model select -->
    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Agent.Notes" class="form-control" rows="3"></textarea>
    </div>
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="/Agents/Index">Cancel</a>
</form>

    </div>
    

@section Scripts {
    <link href="/lib/chosen/chosen.min.css" rel="stylesheet" />
    <script src="/lib/chosen/chosen.jquery.min.js"></script>
    <script>
        (function(){
            function initChosen() {
                try {
                    if (window.jQuery && typeof jQuery.fn.chosen === 'function') {
                        $('#agent_skills').chosen({ placeholder_text_multiple: 'Select skills', no_results_text: 'No skill', width: '100%' });
                    } else {
                        // Retry shortly until the chosen plugin becomes available
                        setTimeout(initChosen, 100);
                    }
                } catch (e) {
                    console.warn('Failed to initialize chosen for #agent_skills', e);
                }
            }
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initChosen);
            } else {
                initChosen();
            }
        })();
    </script>
}
