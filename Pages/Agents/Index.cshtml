@page
@model TinyGenerator.Pages.Agents.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Agents";
    ViewData["PageDescription"] = "Gestisci gli agenti e le loro configurazioni";
}

<div class="mb-3 d-flex justify-content-between align-items-center">
    <form method="get" class="d-flex align-items-center gap-2" asp-page="./Index" id="agentFilterForm">
        <input type="hidden" name="Page" value="1" />
        <input type="search" name="Search" id="searchBox" value="@Model.Search" class="form-control" placeholder="Search agents..." />
        <select name="ModelFilter" id="modelFilterSelect" class="form-select" style="width: 220px">
            <option value="" selected="@(string.IsNullOrWhiteSpace(Model.ModelFilter) ? "selected" : null)">All models</option>
            <option value="__none__" selected="@(Model.ModelFilter == "__none__" ? "selected" : null)">No model assigned</option>
            @foreach (var m in Model.Models)
            {
                var isSelected = !string.IsNullOrWhiteSpace(Model.ModelFilter) && string.Equals(Model.ModelFilter, m.Name, StringComparison.OrdinalIgnoreCase);
                <option value="@m.Name" selected="@(isSelected ? "selected" : null)">@m.Name @((!string.IsNullOrWhiteSpace(m.Provider)) ? "(" + m.Provider + ")" : "")</option>
            }
        </select>
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
    <a class="btn btn-primary" asp-page="./Create">Create Agent</a>
</div>

<table id="tabAgents" class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Model</th>
            <th>Voice</th>
            <th>Skills</th>
            <th>JSON Format</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Agents != null && Model.Agents.Any())
    {
        foreach (var a in Model.Agents)
        {
                <tr>
                <td>@a.Name</td>
                <td>@a.Role</td>
                <td>@(string.IsNullOrWhiteSpace(a.ModelName) ? a.ModelId?.ToString() ?? "" : a.ModelName)</td>
                <td>@(string.IsNullOrWhiteSpace(a.VoiceName) ? (a.VoiceId?.ToString() ?? "") : a.VoiceName)</td>
                <td>@a.Skills</td>
                <td>@(string.IsNullOrWhiteSpace(a.JsonResponseFormat) ? "-" : a.JsonResponseFormat)</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary me-1" asp-page="./Edit" asp-route-id="@a.Id">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@a.Id" class="d-inline agent-delete-form">
                        <button type="button" class="btn btn-sm btn-outline-danger agent-delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="7">No agents found.</td></tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
        @{
            var current = Model.Page;
            var total = Model.TotalPages;
            if (current > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-Page="@(current-1)" asp-route-Search="@Model.Search">Previous</a>
                </li>
            }
            for (int i = 1; i <= total; i++)
            {
                <li class="page-item @(i == current ? "active" : "")">
                    <a class="page-link" asp-route-Page="@i" asp-route-Search="@Model.Search">@i</a>
                </li>
            }
            if (current < total)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-Page="@(current+1)" asp-route-Search="@Model.Search">Next</a>
                </li>
            }
        }
        </ul>
    </nav>
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
}

@section Scripts {
    <script src="~/js/agents-index.js" asp-append-version="true"></script>
    <script>
        (function(){
            function initAgentsTable() {
                try {
                    var table = $('#tabAgents').DataTable({
                        responsive: true,
                        colReorder: true,
                        dom: 'Bfrtip',
                        buttons: [
                            'colvis'
                        ],
                        columnDefs: [ { orderable: false, targets: -1 } ],
                        order: [[0, 'asc']],
                        pageLength: 25,
                        stateSave: true,
                        stateSaveName: 'DataTables_agents',
                        stateDuration: -1
                    });

                    // If server-side pagination controls exist, hide them when DataTables is active
                    $('nav.pagination').hide();

                    // Wire existing search box to DataTables search
                    $('#searchBox').on('input', function(){ table.search(this.value).draw(); });
                    
                    // Handle delete buttons with SweetAlert2
                    document.querySelectorAll('.agent-delete-btn').forEach(btn => {
                        btn.addEventListener('click', async (e) => {
                            e.preventDefault();
                            const form = btn.closest('.agent-delete-form');
                            const confirmed = await showConfirm('Delete Agent', 'Are you sure you want to delete this agent?', 'Delete', 'Cancel');
                            if (confirmed) {
                                form.submit();
                            }
                        });
                    });

                    const modelSelect = document.getElementById('modelFilterSelect');
                    if (modelSelect && modelSelect.form) {
                        modelSelect.addEventListener('change', () => {
                            modelSelect.form.submit();
                        });
                    }
                } catch (e) {
                    console.warn('Failed to initialize Agents DataTable', e);
                }
            }
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initAgentsTable);
            } else { initAgentsTable(); }
        })();
    </script>
}
