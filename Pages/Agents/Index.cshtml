@model TinyGenerator.Pages.Agents.IndexModel
@{
    ViewData["Title"] = "Agents";
}

<div class="page-wrapper">
    <div class="d-flex mb-2 align-items-center toolbar-row">
        <form method="get" class="d-flex" style="gap:.5rem;">
            <input name="search" value="@Model.Search" class="form-control form-control-sm" style="max-width:220px;" placeholder="Cerca..." />
            <select name="modelFilter" class="form-select form-select-sm" style="max-width:220px;">
                <option value="">Tutti i modelli</option>
                <option value="__none__" selected="@(Model.ModelFilter == "__none__" ? "selected" : null)">Nessun modello</option>
                @foreach (var m in Model.Models)
                {
                    if (!string.IsNullOrWhiteSpace(m.Name))
                    {
                        <option value="@m.Name" selected="@(Model.ModelFilter == m.Name ? "selected" : null)">@m.Name @(m.Speed.HasValue ? "(sp:" + m.Speed.ToString() + ")" : "(sp:-)")</option>
                    }
                }
            </select>
            <select name="roleFilter" id="roleFilterSelect" class="form-select form-select-sm" style="max-width:220px;">
                <option value="">Tutti i ruoli</option>
                @foreach (var r in Model.Roles)
                {
                    <option value="@r" selected="@(Model.RoleFilter == r ? "selected" : null)">@r</option>
                }
            </select>
            <select name="pageSize" class="form-select form-select-sm" style="width:90px;">
                @{ var sizes = new[] { 10, 25, 50 }; }
                @foreach (var s in sizes)
                {
                    if (s == Model.PageSize)
                    {
                        <option value="@s" selected>@s</option>
                    }
                    else
                    {
                        <option value="@s">@s</option>
                    }
                }
            </select>
            <input type="hidden" name="orderBy" value="@Model.OrderBy" />
            <button class="btn btn-sm btn-outline-secondary" type="submit">Vai</button>
        </form>
        <div class="ms-auto d-flex gap-1">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Colonne visibili">
                    <i class="bi bi-layout-three-columns"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" id="colVisMenu" style="min-width: 180px;"></ul>
            </div>
            <button class="btn btn-sm btn-outline-secondary" onclick="location.reload()">Refresh</button>
            <a class="btn btn-sm btn-primary" asp-page="./Create">Nuovo</a>
        </div>
    </div>

    <div class="border p-2 rounded" style="border:2px solid #ccc; border-radius:8px;">
        <table class="table table-sm table-striped mb-0" id="agentsTable">
            <thead class="table-light">
                <tr>
                    <th data-col="name"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "name" })">Name</a></th>
                    <th data-col="role"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "role" })">Role</a></th>
                    <th data-col="model"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "model" })">Model</a></th>
                    <th data-col="temp"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "temperature" })">Temp</a></th>
                    <th data-col="topp"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "topp" })">TopP</a></th>
                    <th data-col="repeatpenalty"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "repeatpenalty" })">Repeat</a></th>
                    <th data-col="topk"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "topk" })">TopK</a></th>
                    <th data-col="repeatlastn"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "repeatlastn" })">Repeat N</a></th>
                    <th data-col="numpredict"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "numpredict" })">Predict</a></th>
                    <th data-col="voice"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "voice" })">Voice</a></th>
                    <th data-col="skills"><a href="@Url.Page(null, null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, modelFilter = Model.ModelFilter, roleFilter = Model.RoleFilter, orderBy = "skills" })">Skills</a></th>
                    <th data-col="multistep">MultiStep Template</th>
                    <th data-col="json">JSON Format</th>
                    <th data-col="active">Active</th>
                    <th data-col="detail">Dettaglio</th>
                    <th data-col="actions">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agent in Model.Items)
                {
                    <tr data-id="@agent.Id" data-name="@agent.Name" data-role="@agent.Role">
                        <td data-col="name">@agent.Name</td>
                        <td data-col="role">@agent.Role</td>
                        <td data-col="model">@(!string.IsNullOrWhiteSpace(agent.ModelName) ? agent.ModelName : agent.ModelId?.ToString() ?? "-")</td>
                        <td data-col="temp">@((agent.Temperature.HasValue) ? agent.Temperature.Value.ToString("0.00") : "-")</td>
                        <td data-col="topp">@((agent.TopP.HasValue) ? agent.TopP.Value.ToString("0.00") : "-")</td>
                        <td data-col="repeatpenalty">@((agent.RepeatPenalty.HasValue) ? agent.RepeatPenalty.Value.ToString("0.00") : "-")</td>
                        <td data-col="topk">@((agent.TopK.HasValue) ? agent.TopK.Value.ToString() : "-")</td>
                        <td data-col="repeatlastn">@((agent.RepeatLastN.HasValue) ? agent.RepeatLastN.Value.ToString() : "-")</td>
                        <td data-col="numpredict">@((agent.NumPredict.HasValue) ? agent.NumPredict.Value.ToString() : "-")</td>
                        <td data-col="voice">@(!string.IsNullOrWhiteSpace(agent.VoiceName) ? agent.VoiceName : agent.VoiceId?.ToString() ?? "-")</td>
                        <td data-col="skills">@agent.Skills</td>
                        <td data-col="multistep">@(!string.IsNullOrWhiteSpace(agent.MultiStepTemplateName) ? agent.MultiStepTemplateName : "-")</td>
                        <td data-col="json">@agent.JsonResponseFormat</td>
                        <td data-col="active">@(agent.IsActive ? "Yes" : "No")</td>
                        <td data-col="detail">
                            <button type="button" class="btn btn-sm btn-outline-secondary detail-toggle" data-detail-toggle aria-expanded="false">Dettaglio</button>
                        </td>
                        <td data-col="actions">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Azioni</button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @foreach (var action in Model.GetActionsForAgent(agent))
                                    {
                                        if (action.Method == "GET")
                                        {
                                            <li><a class="dropdown-item" href="@action.Url">@action.Title</a></li>
                                        }
                                        else if (action.Method == "POST")
                                        {
                                            <li>
                                                <form method="post" action="@action.Url" class="m-0" onsubmit="return @(action.Confirm ? "confirm('Are you sure?')" : "true")">
                                                    @Html.AntiForgeryToken()
                                                    @foreach (var field in action.Fields)
                                                    {
                                                        <input type="hidden" name="@field.Key" value="@field.Value" />
                                                    }
                                                    <button type="submit" class="dropdown-item">@action.Title</button>
                                                </form>
                                            </li>
                                        }
                                        else if (action.Method == "CLIENT")
                                        {
                                            var agentId = action.Fields.ContainsKey("agentId") ? action.Fields["agentId"] : "";
                                            var agentName = action.Fields.ContainsKey("agentName") ? action.Fields["agentName"] : "";
                                            <li><button type="button" class="dropdown-item action-generate" data-agent-id="@agentId" data-agent-name="@agentName">@action.Title</button></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr class="agent-detail-row d-none" data-detail-row="agent">
                        <td colspan="15">
                            <div class="p-3 bg-light border rounded">
                                <div class="row g-3">
                                    @if (!string.IsNullOrWhiteSpace(agent.Prompt))
                                    {
                                        <div class="col-12">
                                            <div class="small text-muted">Prompt</div>
                                            <div style="white-space:pre-wrap;">@agent.Prompt</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(agent.Instructions))
                                    {
                                        <div class="col-12">
                                            <div class="small text-muted">Instructions</div>
                                            <div style="white-space:pre-wrap;">@agent.Instructions</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(agent.Config))
                                    {
                                        <div class="col-12">
                                            <div class="small text-muted">Config</div>
                                            <pre class="border rounded p-2" style="white-space:pre-wrap;">@agent.Config</pre>
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(agent.ExecutionPlan))
                                    {
                                        <div class="col-12">
                                            <div class="small text-muted">Execution Plan</div>
                                            <div style="white-space:pre-wrap;">@agent.ExecutionPlan</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(agent.Notes))
                                    {
                                        <div class="col-12">
                                            <div class="small text-muted">Notes</div>
                                            <div style="white-space:pre-wrap;">@agent.Notes</div>
                                        </div>
                                    }
                                    <div class="col-12 col-md-6">
                                        <div class="small text-muted">Model</div>
                                        <div>@(string.IsNullOrWhiteSpace(agent.ModelName) ? (agent.ModelId?.ToString() ?? "-") : agent.ModelName)</div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="small text-muted">Voice</div>
                                        <div>@(string.IsNullOrWhiteSpace(agent.VoiceName) ? (agent.VoiceId?.ToString() ?? "-") : agent.VoiceName)</div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="small text-muted">Created At</div>
                                        <div>@agent.CreatedAt</div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="small text-muted">Updated At</div>
                                        <div>@(string.IsNullOrWhiteSpace(agent.UpdatedAt) ? "-" : agent.UpdatedAt)</div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="pager" class="mt-2" data-page-index="@Model.PageIndex" data-page-size="@Model.PageSize" data-total-count="@Model.TotalCount" data-search="@Model.Search" data-order-by="@Model.OrderBy" data-model-filter="@Model.ModelFilter" data-role-filter="@Model.RoleFilter"></div>
</div>

<!-- Story Generation Modal -->
<div class="modal fade" id="storyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Generate Story</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="GenerateStory" id="storyForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="AgentId" id="modalAgentId" />
                    <div class="mb-3">
                        <label for="storyThemeInput" class="form-label">Story Theme</label>
                        <textarea class="form-control" id="storyThemeInput" name="StoryTheme" rows="3" placeholder="Describe the story theme..." required></textarea>
                        <div class="form-text">What should the story be about?</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Generate Story</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/shared/pagination.js"></script>
    <script src="/js/shared/list-ui.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            if (window.ListUI && typeof window.ListUI.init === 'function') {
                window.ListUI.init({ tableSelector: '#agentsTable', colsMenuId: 'colVisMenu', storageKey: 'agents_cols_v1', pagerId: 'pager' });
            }

            document.querySelectorAll('.action-generate').forEach(btn => {
                btn.addEventListener('click', () => {
                    const agentId = btn.getAttribute('data-agent-id');
                    const agentName = btn.getAttribute('data-agent-name') || '';
                    document.getElementById('modalAgentId').value = agentId || '';
                    document.querySelector('#storyModal .modal-title').textContent = 'Generate Story - ' + agentName;
                    new bootstrap.Modal(document.getElementById('storyModal')).show();
                });
            });

            const STORAGE_KEY = 'lastStoryTheme';
            const storyThemeInput = document.getElementById('storyThemeInput');
            const lastTheme = localStorage.getItem(STORAGE_KEY);
            if (lastTheme && storyThemeInput) {
                storyThemeInput.value = lastTheme;
            }

            const storyForm = document.getElementById('storyForm');
            if (storyForm) {
                storyForm.addEventListener('submit', () => {
                    const theme = storyThemeInput ? storyThemeInput.value.trim() : '';
                    if (theme) {
                        localStorage.setItem(STORAGE_KEY, theme);
                    }
                });
            }

            const roleFilterSelect = document.getElementById('roleFilterSelect');
            const roleStorageKey = 'agents_role_filter_v1';
            if (roleFilterSelect) {
                const qs = new URLSearchParams(window.location.search);
                const roleParam = qs.get('roleFilter');
                if (roleParam === null) {
                    const stored = localStorage.getItem(roleStorageKey);
                    if (stored !== null) {
                        roleFilterSelect.value = stored;
                        if (stored) {
                            const form = roleFilterSelect.closest('form');
                            if (form) form.submit();
                        }
                    }
                } else {
                    localStorage.setItem(roleStorageKey, roleParam);
                }

                roleFilterSelect.addEventListener('change', () => {
                    localStorage.setItem(roleStorageKey, roleFilterSelect.value || '');
                });
            }
        });
    </script>
    <script>
        // Page-local fallback: ensures the "Dettaglio" button toggles the next detail row
        // even if shared scripts fail or are cached.
        document.addEventListener('click', function (evt) {
            // If ListUI has already bound the detail handler, don't run the fallback
            // (otherwise the row gets toggled twice and ends up hidden).
            if (document.documentElement.getAttribute('data-listui-detail-bound') === '1') return;
            const btn = evt.target.closest('[data-detail-toggle]');
            if (!btn) return;
            const tr = btn.closest('tr');
            if (!tr) return;

            let detailRow = tr.nextElementSibling;
            while (detailRow && !(detailRow.matches('[data-detail-row]') || detailRow.classList.contains('agent-detail-row'))) {
                detailRow = detailRow.nextElementSibling;
            }
            if (!detailRow) return;

            const isHidden = detailRow.classList.contains('d-none') || detailRow.style.display === 'none';
            if (isHidden) {
                detailRow.classList.remove('d-none');
                detailRow.style.display = 'table-row';
                btn.setAttribute('aria-expanded', 'true');
            } else {
                detailRow.style.display = 'none';
                detailRow.classList.add('d-none');
                btn.setAttribute('aria-expanded', 'false');
            }
        });
    </script>
}
