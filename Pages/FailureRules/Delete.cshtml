@page
@model TinyGenerator.Pages.FailureRules.DeleteModel
@{
    ViewData["Title"] = "Delete Failure Rule";
    ViewData["PageDescription"] = "Elimina una failure rule";
}

<div class="alert alert-warning">
    <div class="fw-semibold">Confermi l'eliminazione?</div>
    <div class="small text-muted">Operazione irreversibile.</div>
</div>

<div class="border rounded p-3 bg-light">
    <div class="mb-2"><strong>Id:</strong> @Model.Item.Id</div>
    <div class="mb-2"><strong>Profilo:</strong> @(Model.Item.NarrativeProfile?.Name ?? $"#{Model.Item.NarrativeProfileId}")</div>
    <div class="mb-2"><strong>Trigger:</strong> @Model.Item.TriggerType</div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Item.Id" />
    <div class="d-flex gap-2">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-outline-secondary" asp-page="./Index">Annulla</a>
    </div>
</form>
