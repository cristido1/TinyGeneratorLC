@page
@model TinyGenerator.Pages.Models.IndexModel
@{
    ViewData["Title"] = "Models";
    ViewData["PageDescription"] = "Gestione modelli e discovery";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/buttons.bootstrap5.min.css" />
    <style>
        .btn-group-vertical>.btn, .btn-group>.btn { flex: none;}
        div.dt-buttons { display: flex; gap: 0.25rem; flex-wrap: wrap; }
        div.dt-buttons .btn { 
            height: 31px !important; 
            line-height: 1.5 !important; 
            padding: 0.25rem 0.5rem !important;
            font-size: 0.875rem !important;
        }
        div.dt-buttons .btn-primary {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
            color: #fff !important;
        }
        div.dt-buttons .btn-outline-secondary {
            background-color: transparent !important;
            border-color: #6c757d !important;
            color: #6c757d !important;
        }
        div.dt-buttons .btn-outline-secondary:hover {
            background-color: #6c757d !important;
            color: #fff !important;
        }
    </style>
}

@if (TempData["TestResultMessage"] != null)
{
    <div class="alert alert-success">@TempData["TestResultMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="page-wrapper">
    <!-- Hidden actions form: submitted by DataTables buttons -->
    <form method="post" id="modelsActionsForm" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Group" id="modelsActions_Group" />
        <input type="hidden" name="ShowDisabled" id="modelsActions_ShowDisabled" value="@(Model.ShowDisabled ? "true" : "false")" />
    </form>

    <!-- Group select will be moved into DataTables buttons area by JS -->
    <select id="modelsGroupSelect" class="form-select form-select-sm" style="max-width:180px; display:none;">
        @foreach (var g in Model.TestGroups ?? new System.Collections.Generic.List<string>())
        {
            <option value="@g">@g</option>
        }
    </select>
    <div id="modelsShowDisabledWrap" style="display:none;">
        <div class="form-check form-switch d-inline-block align-middle me-2">
            <input class="form-check-input" type="checkbox" id="modelsShowDisabledCheckbox" @(Model.ShowDisabled ? "checked" : "") />
            <label class="form-check-label small" for="modelsShowDisabledCheckbox">Mostra disabilitati</label>
        </div>
    </div>

    <div class="border p-2 rounded" style="border:2px solid #ccc; border-radius:8px;">
        <table class="table table-sm table-striped mb-0" id="modelsTable">
            <thead class="table-light">
                <tr>
                    <th data-col="name">Name</th>
                    <th data-col="provider">Provider</th>
                    <th data-col="note">Note</th>
                    <th data-col="enabled">Enabled</th>
                    <th data-col="local">Local</th>
                    <th data-col="maxctx">MaxCtx</th>
                    <th data-col="ctxtouse">CtxToUse</th>
                    <th data-col="total">Total</th>
                    <th data-col="base">Base</th>
                    <th data-col="texteval">TextEval</th>
                    <th data-col="writer">Writer</th>
                    <th data-col="tts">TTS</th>
                    <th data-col="music">Music</th>
                    <th data-col="fx">FX</th>
                    <th data-col="ambient">Ambient</th>
                    <th data-col="notools">NoTools</th>
                    <th data-col="duration">Duration</th>
                    <th data-col="costin">Cost In</th>
                    <th data-col="costout">Cost Out</th>
                    <th data-col="createdat">Created</th>
                    <th data-col="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Items)
                {
                    var hasResults = m.TestDurationSeconds > 0;
                    <tr>
                        <td data-col="name">@m.Name</td>
                        <td data-col="provider">
                            @if (m.Provider?.ToLower() == "ollama")
                            {
                                <span class="badge bg-success">ollama</span>
                            }
                            else if (m.Provider?.ToLower() == "openai")
                            {
                                <span class="badge bg-warning text-dark">openai</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@m.Provider</span>
                            }
                        </td>
                        <td data-col="note">@m.Note</td>
                        <td data-col="enabled">@if (m.Enabled) { <span class="badge bg-success">Yes</span>; } else { <span class="badge bg-danger">No</span>; }</td>
                        <td data-col="local">@(m.IsLocal ? "Yes" : "No")</td>
                        <td data-col="maxctx">@m.MaxContext</td>
                        <td data-col="ctxtouse">@m.ContextToUse</td>
                        <td data-col="total">@(hasResults ? m.TotalScore.ToString("0.0") : "-")</td>
                        <td data-col="base">@(hasResults ? m.BaseScore.ToString("0.0") : "-")</td>
                        <td data-col="texteval">@(hasResults ? m.TextEvalScore.ToString("0.0") : "-")</td>
                        <td data-col="writer">@(hasResults ? m.WriterScore.ToString("0.0") : "-")</td>
                        <td data-col="tts">@(hasResults ? m.TtsScore.ToString("0.0") : "-")</td>
                        <td data-col="music">@(hasResults ? m.MusicScore.ToString("0.0") : "-")</td>
                        <td data-col="fx">@(hasResults ? m.FxScore.ToString("0.0") : "-")</td>
                        <td data-col="ambient">@(hasResults ? m.AmbientScore.ToString("0.0") : "-")</td>
                        <td data-col="notools">@(m.NoTools ? "‚úì" : "")</td>
                        <td data-col="duration">@((m.TestDurationSeconds.HasValue) ? m.TestDurationSeconds.Value.ToString("0.00") : "-")</td>
                        <td data-col="costin">@m.CostInPerToken.ToString("0.00000")</td>
                        <td data-col="costout">@m.CostOutPerToken.ToString("0.00000")</td>
                        <td data-col="createdat">@(string.IsNullOrWhiteSpace(m.CreatedAt) ? "-" : DateTime.Parse(m.CreatedAt).ToString("dd/MM/yy HH:mm"))</td>
                        <td data-col="actions">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Azioni</button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Models/Edit?id=@m.Id">Edit</a></li>
                                    <li><a class="dropdown-item" href="/Chat?model=@Uri.EscapeDataString(m.Name)">üí¨ Chat</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" action="?handler=DeleteModel" class="m-0" onsubmit="return confirm('Sei sicuro di voler eliminare il modello @m.Name?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="ModelId" value="@m.Id" />
                                            <input type="hidden" name="Model" value="@m.Name" />
                                            <input type="hidden" name="ShowDisabled" value="@(Model.ShowDisabled ? "true" : "false")" />
                                            <button type="submit" class="dropdown-item text-danger">üóëÔ∏è Elimina</button>
                                        </form>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Run Tests</h6></li>
                                    @foreach (var g in Model.TestGroups ?? new System.Collections.Generic.List<string>())
                                    {
                                        <li>
                                            <form method="post" action="?handler=RunGroup" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ModelId" value="@m.Id" />
                                                <input type="hidden" name="Model" value="@m.Name" />
                                                <input type="hidden" name="Group" value="@g" />
                                                <input type="hidden" name="ShowDisabled" value="@(Model.ShowDisabled ? "true" : "false")" />
                                                <button type="submit" class="dropdown-item">‚ñ∂Ô∏è @g</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
(function initModelsTable() {
    if (typeof jQuery === 'undefined') {
        setTimeout(initModelsTable, 50);
        return;
    }

    var scripts = [
        '/lib/datatables/js/jquery.dataTables.min.js',
        '/lib/datatables/js/dataTables.bootstrap5.min.js',
        '/lib/datatables/js/dataTables.buttons.min.js',
        '/lib/datatables/js/buttons.bootstrap5.min.js',
        '/lib/datatables/js/buttons.colVis.min.js'
    ];

    var idx = 0;
    function loadScript(u, cb) {
        var s = document.createElement('script'); s.src = u; s.onload = cb; s.onerror = cb; document.head.appendChild(s);
    }
    function next() { if (idx < scripts.length) loadScript(scripts[idx++], next); else initialize(); }
    next();

    function initialize() {
        jQuery(document).ready(function($) {
            if (typeof $.fn.DataTable === 'undefined') { console.error('DataTables not loaded'); return; }

            var table = $('#modelsTable').DataTable({
                dom: "<'row mb-2'<'col-sm-12'B>>" +
                     "<'row mb-2'<'col-sm-6'l><'col-sm-6 text-end'f>>" +
                     "rt" +
                     "<'row mt-2'<'col-sm-6'i><'col-sm-6 text-end'p>>",
                stateSave: true,
                paging: true,
                pageLength: 25,
                lengthChange: true,
                lengthMenu: [[10,25,50,100],[10,25,50,100]],
                order: [[0,'asc']],
                ordering: true,
                searching: true,
                columnDefs: [ { orderable: false, targets: -1 } ],
                buttons: [
                    {
                        text: '<i class="bi bi-plus-circle me-1"></i>Nuovo',
                        className: 'btn btn-sm btn-primary me-1',
                        action: function() { window.location.href = '/Models/Edit'; }
                    },
                    {
                        text: '<i class="bi bi-play-fill me-1"></i>Group',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() {
                            var group = $('#modelsGroupSelect').val() || '';
                            $('#modelsActions_Group').val(group);
                            var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false';
                            $('#modelsActions_ShowDisabled').val(show);
                            var f = $('#modelsActionsForm');
                            f.attr('action', '?handler=RunAll');
                            f.submit();
                        }
                    },
                    {
                        text: '<i class="bi bi-collection-play me-1"></i>All',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() {
                            $('#modelsActions_Group').val('');
                            var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false';
                            $('#modelsActions_ShowDisabled').val(show);
                            var f = $('#modelsActionsForm');
                            f.attr('action', '?handler=RunAll');
                            f.submit();
                        }
                    },
                    {
                        text: '<i class="bi bi-trash3 me-1"></i>Purge',
                        className: 'btn btn-sm btn-warning me-1',
                        action: function() { var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false'; $('#modelsActions_ShowDisabled').val(show); var f = $('#modelsActionsForm'); f.attr('action', '?handler=PurgeDisabledOllama'); f.submit(); }
                    },
                    {
                        text: '<i class="bi bi-arrow-repeat me-1"></i>Ctx',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() { var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false'; $('#modelsActions_ShowDisabled').val(show); var f = $('#modelsActionsForm'); f.attr('action', '?handler=RefreshContexts'); f.submit(); }
                    },
                    {
                        text: '<i class="bi bi-search me-1"></i>Discover',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() { var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false'; $('#modelsActions_ShowDisabled').val(show); var f = $('#modelsActionsForm'); f.attr('action', '?handler=AddOllamaModels'); f.submit(); }
                    },
                    {
                        text: '<i class="bi bi-calculator me-1"></i>Recalc',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() { var show = $('#modelsShowDisabledCheckbox').prop('checked') ? 'true' : 'false'; $('#modelsActions_ShowDisabled').val(show); var f = $('#modelsActionsForm'); f.attr('action', '?handler=RecalculateScores'); f.submit(); }
                    },
                    {
                        text: '<i class="bi bi-arrow-clockwise me-1"></i>Refresh',
                        className: 'btn btn-sm btn-outline-secondary me-1',
                        action: function() { location.reload(); }
                    },
                    { 
                        extend: 'colvis', 
                        text: '<i class="bi bi-layout-three-columns me-1"></i>Colonne', 
                        className: 'btn btn-sm btn-outline-secondary' 
                    }
                ],
                language: {
                    search: "Cerca:",
                    lengthMenu: "Mostra _MENU_ record",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "Nessun record disponibile",
                    infoFiltered: "(filtrati da _MAX_ record totali)",
                    zeroRecords: "Nessun record trovato",
                    paginate: { first: "Prima", last: "Ultima", next: "Succ", previous: "Prec" }
                }
            });

            // Wire up colVisMenu fallback if present
            try {
                if ($('#colVisMenu').length && table && table.buttons) {
                    // populate the existing colVisMenu with toggle items
                    var btn = table.button('.buttons-colvis');
                    if (btn.length) { /* keep built-in button visible; no extra handling needed */ }
                }
            } catch (e) { console.warn(e); }
            // Move the Group select and ShowDisabled toggle into the DataTables buttons area for convenient access
            try {
                var $btnContainer = $('.dt-buttons').first();
                if ($btnContainer.length) {
                    var $select = $('#modelsGroupSelect');
                    if ($select.length) {
                        $select.show();
                        var $wrap = $('<div class="d-inline-block me-1 align-middle"></div>');
                        $wrap.append($select);
                        $btnContainer.prepend($wrap);
                    }
                    var $showWrap = $('#modelsShowDisabledWrap');
                    if ($showWrap.length) {
                        $showWrap.show();
                        $btnContainer.prepend($showWrap);
                        // attach change handler to reload with ShowDisabled in query string
                        $('#modelsShowDisabledCheckbox').on('change', function() {
                            try {
                                var checked = this.checked ? 'true' : 'false';
                                var url = new URL(window.location.href);
                                url.searchParams.set('ShowDisabled', checked);
                                // preserve page and search params if present
                                window.location.href = url.toString();
                            } catch (e) { console.warn(e); window.location.reload(); }
                        });
                    }
                }
            } catch (e) { console.warn(e); }
        });
    }
})();
</script>
