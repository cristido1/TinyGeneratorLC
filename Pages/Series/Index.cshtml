@page
@model TinyGenerator.Pages.Series.IndexModel
@{
    ViewData["Title"] = "Serie TV / Racconti";
    ViewData["PageDescription"] = "Gestisci le serie e i racconti generati";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/buttons.bootstrap5.min.css" />
}

<div class="page-wrapper">
    <div style="height: calc(100vh - 200px); width:100%; overflow-x:auto; overflow-y:auto;">
        <style>
            .table-container {
                border: 1px solid #dee2e6;
                border-radius: 0.375rem;
                padding: 1rem;
                background: #fff;
            }

            #seriesTable {
                font-size: 0.9rem;
                margin-bottom: 0;
            }

            #seriesTable thead th {
                font-weight: 600;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                padding: 0.75rem;
                border-bottom: 2px solid #dee2e6;
            }

            #seriesTable tbody td {
                padding: 0.75rem;
                vertical-align: middle;
            }

            #seriesTable tbody tr:hover {
                background-color: #f8f9fa;
            }

            #seriesTable tbody tr.odd,
            #seriesTable tbody tr.even {
                background-color: transparent;
            }

            .dt-buttons .btn {
                font-size: 0.875rem;
                padding: 0.375rem 0.75rem;
            }

            .dataTables_filter input {
                margin-left: 0.5rem;
                border-radius: 0.25rem;
            }

            .dataTables_paginate .pagination {
                margin-bottom: 0;
            }

            .dataTables_info {
                font-size: 0.875rem;
                color: #6c757d;
            }

            .btn-group-vertical > .btn,
            .btn-group > .btn {
                flex: none;
            }
        </style>
        <div class="table-container">
            <table class="table table-hover" id="seriesTable">
                <thead class="table-light">
                    <tr>
                        <th data-col="id">Id</th>
                        <th data-col="titolo">
                            <a href="@SortUrl("titolo")">Titolo @SortIndicator("titolo")</a>
                        </th>
                        <th data-col="genere">
                            <a href="@SortUrl("genere")">Genere @SortIndicator("genere")</a>
                        </th>
                        <th data-col="sottogenere">
                            <a href="@SortUrl("sottogenere")">Sottogenere @SortIndicator("sottogenere")</a>
                        </th>
                        <th data-col="periodo">
                            <a href="@SortUrl("periodo")">Periodo @SortIndicator("periodo")</a>
                        </th>
                        <th data-col="tono">
                            <a href="@SortUrl("tono")">Tono @SortIndicator("tono")</a>
                        </th>
                        <th data-col="target">
                            <a href="@SortUrl("target")">Target @SortIndicator("target")</a>
                        </th>
                        <th data-col="lingua">
                            <a href="@SortUrl("lingua")">Lingua @SortIndicator("lingua")</a>
                        </th>
                        <th data-col="episodi">
                            <a href="@SortUrl("episodi")">Episodi @SortIndicator("episodi")</a>
                        </th>
                        <th data-col="data">
                            <a href="@SortUrl("data")">Data Inserimento @SortIndicator("data")</a>
                        </th>
                        <th data-col="detail">Dettaglio</th>
                        <th data-col="actions">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Items)
                    {
                        <tr>
                            <td data-col="id">@s.Id</td>
                            <td data-col="titolo">@s.Titolo</td>
                            <td data-col="genere">@(!string.IsNullOrWhiteSpace(s.Genere) ? s.Genere : "-")</td>
                            <td data-col="sottogenere">@(!string.IsNullOrWhiteSpace(s.Sottogenere) ? s.Sottogenere : "-")</td>
                            <td data-col="periodo">@(!string.IsNullOrWhiteSpace(s.PeriodoNarrativo) ? s.PeriodoNarrativo : "-")</td>
                            <td data-col="tono">@(!string.IsNullOrWhiteSpace(s.TonoBase) ? s.TonoBase : "-")</td>
                            <td data-col="target">@(!string.IsNullOrWhiteSpace(s.Target) ? s.Target : "-")</td>
                            <td data-col="lingua">@(!string.IsNullOrWhiteSpace(s.Lingua) ? s.Lingua : "-")</td>
                            <td data-col="episodi">@s.EpisodiGenerati</td>
                            <td data-col="data">@s.DataInserimento.ToString("dd/MM/yyyy HH:mm")</td>
                            <td data-col="detail">
                                <button type="button" class="btn btn-sm btn-outline-secondary detail-toggle" data-detail-toggle aria-expanded="false">Dettaglio</button>
                            </td>
                            <td data-col="actions">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Azioni</button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        @foreach (var action in Model.GetActionsForSeries(s))
                                        {
                                            if (action.Method.Equals("GET", System.StringComparison.OrdinalIgnoreCase))
                                            {
                                                <li><a class="dropdown-item" href="@action.Url" @(action.Confirm ? "onclick=\"return confirm('Confermi questa azione?');\"" : "")>@action.Title</a></li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <form method="post" action="@action.Url">
                                                        @Html.AntiForgeryToken()
                                                        <button class="dropdown-item" type="submit" @(action.Confirm ? "onclick=\"return confirm('Confermi questa azione?');\"" : "")>@action.Title</button>
                                                    </form>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        var details = new (string Label, string? Value)[]
                        {
                            ("Ambientazione Base", s.AmbientazioneBase),
                            ("Premessa Serie", s.PremessaSerie),
                            ("Arco Narrativo Serie", s.ArcoNarrativoSerie),
                            ("Stile Scrittura", s.StileScrittura),
                            ("Regole Narrative", s.RegoleNarrative),
                            ("Note AI", s.NoteAI)
                        };
                        var hasDetails = details.Any(d => !string.IsNullOrWhiteSpace(d.Value));
                        var characters = s.Characters ?? new List<TinyGenerator.Models.SeriesCharacter>();
                        var hasCharacters = characters.Count > 0;
                        var episodes = (s.Episodes ?? new List<TinyGenerator.Models.SeriesEpisode>()).OrderBy(e => e.Number).ToList();
                        var hasEpisodes = episodes.Count > 0;
                        <tr class="series-detail-row d-none" data-detail-row="series">
                            <td colspan="12">
                                <div class="p-3 bg-light border rounded">
                                    @if (hasDetails)
                                    {
                                        <div class="row g-3">
                                            @foreach (var detail in details)
                                            {
                                                if (!string.IsNullOrWhiteSpace(detail.Value))
                                                {
                                                    <div class="col-12 col-md-6">
                                                        <div class="small text-muted">@detail.Label</div>
                                                        <div style="white-space:pre-wrap;">@detail.Value</div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted"><em>Nessun dettaglio disponibile</em></div>
                                    }

                                    <div class="mt-3">
                                        <div class="fw-semibold mb-2">Episodi</div>
                                        @if (hasEpisodes)
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-sm table-bordered mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th style="width: 90px;">Numero</th>
                                                            <th>Titolo</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var e in episodes)
                                                        {
                                                            <tr>
                                                                <td>@e.Number</td>
                                                                <td>@(string.IsNullOrWhiteSpace(e.Title) ? "-" : e.Title)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-muted"><em>Nessun episodio definito</em></div>
                                        }
                                    </div>

                                    <div class="mt-3">
                                        <div class="fw-semibold mb-2">Personaggi</div>
                                        @if (hasCharacters)
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-sm table-bordered mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Nome</th>
                                                            <th>Sesso</th>
                                                            <th>Et√†</th>
                                                            <th>Specializzazione</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var c in characters)
                                                        {
                                                            <tr>
                                                                <td>@c.Name</td>
                                                                <td>@(string.IsNullOrWhiteSpace(c.Gender) ? "-" : c.Gender)</td>
                                                                <td>@(string.IsNullOrWhiteSpace(c.Eta) ? "-" : c.Eta)</td>
                                                                <td>@(string.IsNullOrWhiteSpace(c.Specializzazione) ? "-" : c.Specializzazione)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-muted"><em>Nessun personaggio definito</em></div>
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    (function initSeriesDataTable(){
        if (typeof jQuery === 'undefined') { setTimeout(initSeriesDataTable, 50); return; }
        var scripts = ['/lib/datatables/js/jquery.dataTables.min.js','/lib/datatables/js/dataTables.bootstrap5.min.js','/lib/datatables/js/dataTables.buttons.min.js','/lib/datatables/js/buttons.bootstrap5.min.js','/lib/datatables/js/buttons.colVis.min.js'];
        var i=0; function load(u,cb){ var s=document.createElement('script'); s.src=u; s.onload=cb; s.onerror=function(){ console.error('Failed to load script:', u); cb(); }; document.head.appendChild(s);} function next(){ if(i<scripts.length) load(scripts[i++], next); else init(); } next();
        function init(){ jQuery(function($){ if(typeof $.fn.DataTable === 'undefined'){ console.error('DataTables not loaded'); return; }
            if (window._seriesDataTableInitialized) return; window._seriesDataTableInitialized = true;
            if ($.fn.DataTable.isDataTable('#seriesTable')) {
                try { $('#seriesTable').DataTable().destroy(); } catch(e) { console.warn('Failed to destroy existing DataTable', e); }
            }
            var $seriesTable = $('#seriesTable');
            // Move detail rows into data attributes to avoid DataTables column count errors
            $seriesTable.find('tr.series-detail-row').each(function(){
                var $detail = $(this);
                var $parent = $detail.prev('tr');
                if ($parent.length) {
                    var detailHtml = $detail.find('td').first().html() || '';
                    $parent.data('detailHtml', detailHtml);
                }
                $detail.remove();
            });

            var table = $seriesTable.DataTable({
                dom: "<'row mb-2'<'col-sm-6'B><'col-sm-6 text-end'f>>" +
                     "rt" +
                     "<'row mt-2'<'col-sm-6'i><'col-sm-6 text-end'p>>",
                stateSave: true,
                paging: true,
                pageLength: 25,
                lengthChange: true,
                lengthMenu: [[10,25,50,100],[10,25,50,100]],
                order: [[1,'asc']],
                columnDefs: [{ orderable:false, targets:[0,10,11] }],
                buttons: [
                    {
                        text: '<i class=\"bi bi-plus-lg me-1\"></i>Nuovo',
                        className: 'btn btn-sm btn-primary me-1',
                        attr: { style: 'width: auto; flex: 0 0 auto;' },
                        action: function(){ window.location.href='@Url.Page("./Edit")'; }
                    },
                    {
                        extend: 'colvis',
                        text: 'Colonne',
                        className: 'btn btn-sm btn-secondary',
                        attr: { style: 'width: auto; flex: 0 0 auto;' }
                    }
                ]
            });

            $(document).off('click.seriesDetail').on('click.seriesDetail', '[data-detail-toggle]', function(){
                var tr=$(this).closest('tr');
                if (!tr.length) return;
                var detailHtml = tr.data('detailHtml');
                if (!detailHtml) return;
                var row = table.row(tr);
                if (row.child.isShown()) {
                    row.child.hide();
                    $(this).attr('aria-expanded', 'false');
                } else {
                    row.child(detailHtml, 'series-detail-child').show();
                    $(this).attr('aria-expanded', 'true');
                }
            });
        }); }
    })();
</script>

@functions {
    private string SortUrl(string col)
    {
        var current = Model.OrderBy ?? string.Empty;
        var next = current.Equals(col, System.StringComparison.OrdinalIgnoreCase) ? col + "_desc"
            : current.Equals(col + "_desc", System.StringComparison.OrdinalIgnoreCase) ? col
            : col;
        return Url.Page("./Index", null, new { page = 1, pageSize = Model.PageSize, search = Model.Search, orderBy = next }, null) ?? "#";
    }

    private string SortIndicator(string col)
    {
        var current = Model.OrderBy ?? string.Empty;
        if (current.Equals(col, System.StringComparison.OrdinalIgnoreCase)) return "^";
        if (current.Equals(col + "_desc", System.StringComparison.OrdinalIgnoreCase)) return "v";
        return string.Empty;
    }
}
