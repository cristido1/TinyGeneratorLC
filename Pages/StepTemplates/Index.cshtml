@page
@model TinyGenerator.Pages.StepTemplates.IndexModel
@{
    ViewData["Title"] = "Step Templates";
    ViewData["PageDescription"] = "Gestisci i template multi-step per la generazione delle storie";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/buttons.bootstrap5.min.css" />
}

<div class="page-wrapper">
    <div class="d-flex mb-2 align-items-center toolbar-row">
        <form method="get" class="d-flex" style="gap:.5rem;">
            <input name="search" value="@Model.Search" class="form-control form-control-sm" style="max-width:220px;" placeholder="Cerca..." />
            <select name="pageSize" class="form-select form-select-sm" style="width:90px;">
                @{ var sizes = new[] { 10, 25, 50 }; }
                @foreach (var s in sizes)
                {
                    if (s == Model.PageSize)
                    {
                        <option value="@s" selected>@s</option>
                    }
                    else
                    {
                        <option value="@s">@s</option>
                    }
                }
            </select>
            <input type="hidden" name="orderBy" value="@Model.OrderBy" />
            <button class="btn btn-sm btn-outline-secondary" type="submit">Vai</button>
        </form>
        <div class="ms-auto d-flex gap-1">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Colonne visibili">
                    <i class="bi bi-layout-three-columns"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" id="colVisMenu" style="min-width: 180px;"></ul>
            </div>
            <button id="refreshBtn" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">Refresh</button>
            <button class="btn btn-sm btn-primary" onclick="openCreateModal()">Nuovo</button>
        </div>
    </div>

    <div class="border p-2 rounded" style="border:2px solid #ccc; border-radius:8px;">
        <table class="table table-sm table-striped mb-0" id="stepTemplatesTable">
            <thead class="table-light">
                <tr>
                    <th data-col="name">Name</th>
                    <th data-col="tasktype">Task Type</th>
                    <th data-col="description">Description</th>
                    <th data-col="steps">Steps</th>
                    <th data-col="created">Created</th>
                    <th data-col="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    var created = (!string.IsNullOrWhiteSpace(item.CreatedAt) && DateTime.TryParse(item.CreatedAt, out var cdt))
                        ? cdt.ToString("dd/MM/yyyy HH:mm")
                        : "-";
                    <tr data-id="@item.Id" data-name="@item.Name" data-tasktype="@item.TaskType" data-stepprompt="@Html.Raw(item.StepPrompt ?? string.Empty)" data-instructions="@Html.Raw(item.Instructions ?? string.Empty)">
                        <td>@item.Name</td>
                        <td>@item.TaskType</td>
                        <td>@item.Description</td>
                        <td>@(item.StepPrompt?.Split('\n').Count(s => !string.IsNullOrWhiteSpace(s)) ?? 0)</td>
                        <td>@created</td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary action-details">Dettagli</button>
                            <button class="btn btn-sm btn-outline-secondary action-edit">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Edit/Create modal placeholder (implementation can be expanded later) -->
    <div class="modal fade" id="modalEditTemplate" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Edit Template</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- form fields will be populated by openEditModal() -->
                    <input type="hidden" id="templateId" />
                    <div id="modalFormContainer"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Modal -->
    <div class="modal fade" id="detailsModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Template Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detailsModalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="/js/shared/pagination.js"></script>
    <script src="/js/shared/list-ui.js"></script>
    <script>
        (function init() {
            function ensureDataTables(cb) {
                if (typeof jQuery === 'undefined') { return setTimeout(() => ensureDataTables(cb), 50); }
                var scripts = ['/lib/datatables/js/jquery.dataTables.min.js','/lib/datatables/js/dataTables.bootstrap5.min.js','/lib/datatables/js/dataTables.buttons.min.js','/lib/datatables/js/buttons.bootstrap5.min.js','/lib/datatables/js/buttons.colVis.min.js'];
                var i = 0;
                function load(u, done){ var s = document.createElement('script'); s.src = u; s.onload = done; s.onerror = done; document.head.appendChild(s); }
                function next(){ if (i < scripts.length) load(scripts[i++], next); else cb(); }
                next();
            }

            ensureDataTables(function(){ jQuery(function($){
                if (typeof $.fn.DataTable === 'undefined') { console.error('DataTables not loaded'); return; }
                var table = $('#stepTemplatesTable').DataTable({ dom:"<'row mb-2'<'col-sm-6'B><'col-sm-6 text-end'f>>rt<'row mt-2'<'col-sm-6'il><'col-sm-6 text-end'p>>", stateSave:true, paging:true, pageLength:25, lengthChange:true, lengthMenu:[[10,25,50,100],[10,25,50,100]], order:[[0,'asc']], columnDefs:[{ orderable:false, targets:-1 }], buttons:[{ text:'<i class="bi bi-plus-circle me-1"></i>Nuovo', className:'btn btn-sm btn-primary', action:function(){ openCreateModal(); } },{ extend:'colvis', text:'Colonne', className:'btn btn-sm btn-secondary' } ] });

                $(document).on('click', '.action-details', function(){ var tr = $(this).closest('tr'); showDetails(tr.data()); });
                $(document).on('click', '.action-edit', function(){ var tr = $(this).closest('tr'); openEditModal(tr.data()); });
            }); });

            // ListUI init
            document.addEventListener('DOMContentLoaded', () => {
                if (window.ListUI && typeof window.ListUI.init === 'function') {
                    window.ListUI.init({ tableSelector: '#stepTemplatesTable', colsMenuId: 'colVisMenu', storageKey: 'steptemplates_cols_v1', pagerId: 'pager' });
                }
            });

            window.showDetails = function(data){ const stepPrompt = data.stepprompt||''; const instructions = data.instructions||''; const steps = stepPrompt.split('\n').filter(line=>/^\d+\./.test(line.trim())); let html='<div class="p-2">'; if(instructions){ html+='<div class="mb-3"><h6 class="mb-1">Instructions override</h6><pre class="bg-light border p-2" style="max-height:140px;overflow-y:auto;font-size:0.85rem;">'+escapeHtml(instructions)+'</pre></div>'; } html+='<h6>Template Steps:</h6><ol class="list-group list-group-numbered mt-2">'; if(steps.length>0){ steps.forEach(step=>{ const stepText=step.replace(/^\d+\.\s*/,'').trim(); html+='<li class="list-group-item">'+escapeHtml(stepText)+'</li>'; }); } else { html+='<li class="list-group-item">No numbered steps found</li>'; } html+='</ol><hr><strong>Full Step Prompt:</strong><pre class="bg-light p-2 mt-2" style="max-height:200px;overflow-y:auto;font-size:0.85rem;">'+escapeHtml(stepPrompt)+'</pre></div>'; document.getElementById('detailsModalBody').innerHTML=html; new bootstrap.Modal(document.getElementById('detailsModal')).show(); };

            window.openEditModal = function(data){ document.getElementById('modalTitle').textContent = 'Edit Template: ' + (data.name||''); document.getElementById('templateId').value = data.id||'0'; /* populate form if needed */ new bootstrap.Modal(document.getElementById('modalEditTemplate')).show(); };

            window.openCreateModal = function(){ document.getElementById('modalTitle').textContent = 'Create Template'; document.getElementById('templateId').value = '0'; new bootstrap.Modal(document.getElementById('modalEditTemplate')).show(); };

            function escapeHtml(text){ if(!text) return ''; return String(text).replace(/[&<>"']/g, m=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#039;"})[m]); }
        })();
    </script>
}
