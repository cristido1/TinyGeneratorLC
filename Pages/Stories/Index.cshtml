<div id="queuePanel" class="position-fixed bottom-0 end-0 p-3" style="z-index:1040; width: 380px; max-width: 95vw;">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center queue-drag-handle" style="cursor: move;">
            <span>Operazioni in coda / in esecuzione</span>
            <span class="badge bg-primary">@Model.ActiveCommands.Count</span>
        </div>
        <div class="list-group list-group-flush small" style="max-height: 55vh; overflow-y: auto;">
            @if (Model.ActiveCommands == null || !Model.ActiveCommands.Any())
            {
                <div class="list-group-item text-muted">Nessuna operazione in corso</div>
            }
            else
            {
                foreach (var cmd in Model.ActiveCommands)
                {
                    var agentName = cmd.AgentName ?? "-";
                    var modelName = cmd.ModelName ?? "-";
                    var agentRole = (cmd.Metadata != null && cmd.Metadata.TryGetValue("agentRole", out var ar)) ? ar : string.Empty;
                    var op = (cmd.Metadata != null && cmd.Metadata.TryGetValue("operation", out var opVal)) ? opVal : cmd.OperationName;
                    var storyId = (cmd.Metadata != null && cmd.Metadata.TryGetValue("storyId", out var sid)) ? sid : "-";
                    var statusClass = cmd.Status.Equals("running", System.StringComparison.OrdinalIgnoreCase) ? "bg-success" : "bg-warning text-dark";
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">@op</div>
                                <div class="text-muted">Story: @storyId</div>
                                <div class="text-muted">Agente: @agentName @(string.IsNullOrWhiteSpace(agentRole) ? "" : $"({agentRole})")</div>
                                <div class="text-muted">Model: @modelName</div>
                            </div>
                            <span class="badge @statusClass text-uppercase">@cmd.Status</span>
                        </div>
                        <div class="text-muted mt-1">
                            <small>Enqueued: @cmd.EnqueuedAt.ToLocalTime().ToString("HH:mm:ss")</small>
                            @if (cmd.StartedAt.HasValue)
                            {
                                <small class="ms-2">Start: @cmd.StartedAt.Value.ToLocalTime().ToString("HH:mm:ss")</small>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

