@page
@model TinyGenerator.Pages.Stories.IndexModel
@{
    ViewData["Title"] = "Storie";
}

<div class="d-flex justify-content-between mb-3">
    <h3>Storie salvate</h3>
    <div>
        <a class="btn btn-primary" asp-page="/Stories/Create">Nuova storia</a>
    </div>
</div>

<table id="storiesTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Timestamp</th>
            <th>Prompt</th>
            <th>Modello</th>
            <th>Score</th>
            <th>Valutazione</th>
            <th>Approved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var s in Model.Stories) {
        <tr data-story-id="@s.Id">
            <td class="dt-control"></td>
            <td>@s.Id</td>
            <td>@s.Timestamp</td>
            <td style="max-width:320px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap">@s.Prompt</td>
            <td>@s.Model</td>
            <td>@s.Score</td>
            <td>@(s.Evaluations.Any() ? $"{s.Evaluations.Average(e => e.TotalScore):F1}/100" : "-")</td>
            <td>@(s.Approved ? "✅" : "❌")</td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-sm btn-outline-primary" asp-page="/Stories/Details" asp-route-id="@s.Id">Dettagli</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-page="/Stories/Edit" asp-route-id="@s.Id">Modifica</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id" class="delete-story-form" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Elimina</button>
                    </form>
                </div>
            </td>
        </tr>
        @if (s.Evaluations.Any())
        {
            <tr class="evaluation-details" data-parent-story="@s.Id" style="display:none">
                <td colspan="9">
                    <div class="p-3">
                        <h5>Valutazioni complete</h5>
                        @foreach (var eval in s.Evaluations)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <strong>@eval.Model</strong> - Totale: <span class="badge bg-primary">@eval.TotalScore/100</span>
                                    <small class="text-muted">(@eval.Ts)</small>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Coerenza narrativa:</span> <span class="badge bg-secondary">@eval.NarrativeCoherenceScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.NarrativeCoherenceDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.NarrativeCoherenceDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Struttura:</span> <span class="badge bg-secondary">@eval.StructureScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.StructureDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.StructureDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Caratterizzazione:</span> <span class="badge bg-secondary">@eval.CharacterizationScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.CharacterizationDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.CharacterizationDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Dialoghi:</span> <span class="badge bg-secondary">@eval.DialoguesScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.DialoguesDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.DialoguesDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Ritmo:</span> <span class="badge bg-secondary">@eval.PacingScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.PacingDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.PacingDefects</small></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Originalità:</span> <span class="badge bg-secondary">@eval.OriginalityScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.OriginalityDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.OriginalityDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Stile:</span> <span class="badge bg-secondary">@eval.StyleScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.StyleDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.StyleDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Worldbuilding:</span> <span class="badge bg-secondary">@eval.WorldbuildingScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.WorldbuildingDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.WorldbuildingDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Coerenza tematica:</span> <span class="badge bg-secondary">@eval.ThematicCoherenceScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.ThematicCoherenceDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.ThematicCoherenceDefects</small></li>
                                                }
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span>Impatto emotivo:</span> <span class="badge bg-secondary">@eval.EmotionalImpactScore/10</span>
                                                </li>
                                                @if (!string.IsNullOrWhiteSpace(eval.EmotionalImpactDefects))
                                                {
                                                    <li class="list-group-item"><small class="text-muted">@eval.EmotionalImpactDefects</small></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(eval.OverallEvaluation))
                                    {
                                        <div class="mt-3">
                                            <strong>Valutazione complessiva:</strong>
                                            <p class="mb-0">@eval.OverallEvaluation</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <!-- SweetAlert2 (compact confirmation) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <style>
        /* DataTables expand control */
        td.dt-control {
            background: url('data:image/svg+xml;base64,') no-repeat center center;
            cursor: pointer;
        }
        td.dt-control.open {
            background: url('data:image/svg+xml;base64,') no-repeat center center;
        }
        /* SweetAlert2 compact popup styled to match Bootstrap */
        .swal2-popup.swal2-small {
            width: 420px !important;
            padding: 1rem 1.25rem !important;
            border-radius: .375rem !important;
            font-size: .95rem !important;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
        /* Layout: icon in left column, title+content stacked in right column */
        .swal2-popup.swal2-small {
            display: grid !important;
            grid-template-columns: 40px 1fr !important;
            grid-template-rows: auto auto auto !important;
            gap: 6px 12px !important;
            align-items: start !important;
        }
        .swal2-popup.swal2-small .swal2-icon {
            grid-column: 1 / 2 !important;
            grid-row: 1 / 3 !important;
            justify-self: center !important;
            align-self: start !important;
            width: 32px !important;
            height: 32px !important;
            font-size: 14px !important;
            margin: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-title {
            grid-column: 2 / 3 !important;
            grid-row: 1 / 2 !important;
            text-align: left !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-content {
            grid-column: 2 / 3 !important;
            grid-row: 2 / 3 !important;
            text-align: left !important;
            margin: 0 !important;
            padding-top: 4px !important;
        }
        /* Place action buttons on a dedicated row, centered horizontally */
        .swal2-popup.swal2-small .swal2-actions {
            grid-column: 1 / -1 !important;
            grid-row: 3 / 4 !important;
            display: flex !important;
            justify-content: center !important;
            gap: .5rem !important;
            padding-top: .5rem !important;
        }
        .swal2-popup.swal2-small .swal2-actions .swal2-confirm,
        .swal2-popup.swal2-small .swal2-actions .swal2-cancel {
            margin: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-title {
            font-size: 1rem !important;
            margin-bottom: .25rem !important;
        }
        .swal2-popup.swal2-small .swal2-actions .btn {
            min-width: 86px;
            margin: 0 .25rem;
        }
    </style>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function() {
            var table = $('#storiesTable').DataTable({
                pageLength: 25,
                lengthChange: true,
                stateSave: true,
                columnDefs: [
                    { orderable: false, targets: 0 },
                    { orderable: false, targets: -1 }
                ]
            });

            // Handle expand/collapse for evaluation details
            $('#storiesTable tbody').on('click', 'td.dt-control', function () {
                var tr = $(this).closest('tr');
                var storyId = tr.data('story-id');
                var detailRow = $('tr.evaluation-details[data-parent-story="' + storyId + '"]');
                
                if (detailRow.is(':visible')) {
                    detailRow.hide();
                    $(this).removeClass('open');
                } else {
                    detailRow.show();
                    $(this).addClass('open');
                }
            });

            // Intercept submit on delete forms and show SweetAlert2 confirmation
            $('form.delete-story-form').on('submit', function (e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: 'Eliminare la storia?',
                    text: 'Questa azione non è reversibile.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Elimina',
                    cancelButtonText: 'Annulla',
                    customClass: { popup: 'swal2-small', confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary' },
                    buttonsStyling: false,
                    width: 420
                }).then(function(result) {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}
