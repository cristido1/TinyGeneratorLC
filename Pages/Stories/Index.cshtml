    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables/js/buttons.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function() {
            // Make queue panel draggable via header handle
            (function() {
                var panel = document.getElementById('queuePanel');
                if (!panel) return;
                var handle = panel.querySelector('.queue-drag-handle');
                if (!handle) return;

                var offsetX = 0, offsetY = 0, startX = 0, startY = 0;

                handle.addEventListener('pointerdown', function(e) {
                    // Prevent text selection
                    e.preventDefault();

                    // Lock current position as left/top to allow free drag
                    var rect = panel.getBoundingClientRect();
                    panel.style.left = rect.left + 'px';
                    panel.style.top = rect.top + 'px';
                    panel.style.right = 'auto';
                    panel.style.bottom = 'auto';

                    startX = e.clientX;
                    startY = e.clientY;
                    offsetX = rect.left;
                    offsetY = rect.top;

                    var move = function(ev) {
                        var dx = ev.clientX - startX;
                        var dy = ev.clientY - startY;
                        panel.style.left = (offsetX + dx) + 'px';
                        panel.style.top = (offsetY + dy) + 'px';
                    };

                    var up = function() {
                        document.removeEventListener('pointermove', move);
                        document.removeEventListener('pointerup', up);
                    };

                    document.addEventListener('pointermove', move);
                    document.addEventListener('pointerup', up);
                });
            })();

            // Function to get badge color based on score
            function getScoreBadgeClass(score) {
                if (score >= 0 && score <= 1) return 'bg-danger'; // rosso
                if (score >= 2 && score <= 3) return 'bg-danger'; // arancio
                if (score >= 4 && score <= 5) return 'bg-warning'; // giallo (usando info come giallo chiaro)
                if (score >= 6 && score <= 7) return 'bg-success'; // verde
                if (score >= 8 && score <= 10) return 'bg-success text-warning'; // verde
                return 'bg-secondary'; // default
            }

            // Format function for child rows (evaluations)
            function formatEvaluations(evaluations, storyId) {
                if (!evaluations || evaluations.length === 0) {
                    return '<div class="p-3"><em>Nessuna valutazione disponibile</em></div>';
                }
                
                var html = '<div class="p-3"><h5>Valutazioni complete</h5>';
                
                evaluations.forEach(function(eval) {
                    html += '<div class="card mb-3">';
                    html += '<div class="card-header d-flex justify-content-between align-items-start">';
                    html += '<div>';
                    html += '<strong>' + (eval.Model || 'N/A') + '</strong>';
                    if (eval.AgentName) {
                        html += ' <small class="text-muted">by ' + eval.AgentName + '</small>';
                    }
                    if (eval.AgentModel) {
                        html += ' <small class="text-muted">(' + eval.AgentModel + ')</small>';
                    }
                    html += '<div><small class="text-muted">' + (eval.Timestamp || '') + '</small></div>';
                    html += '</div>';
                    html += '<div class="text-end">Totale: <span class="badge bg-primary">' + eval.TotalScore + '/40</span></div>';
                    html += '</div>';
                    html += '<div class="card-body"><div class="row">';
                    
                    // Left column
                    html += '<div class="col-md-6"><ul class="list-group list-group-flush">';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Coerenza narrativa:</span> <span class="badge ' + getScoreBadgeClass(eval.NarrativeCoherenceScore) + '">' + eval.NarrativeCoherenceScore + '/10</span></li>';
                    if (eval.NarrativeCoherenceDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.NarrativeCoherenceDefects + '</small></li>';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Originalit√†:</span> <span class="badge ' + getScoreBadgeClass(eval.OriginalityScore) + '">' + eval.OriginalityScore + '/10</span></li>';
                    if (eval.OriginalityDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.OriginalityDefects + '</small></li>';
                    html += '</ul></div>';
                    
                    // Right column
                    html += '<div class="col-md-6"><ul class="list-group list-group-flush">';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Impatto emotivo:</span> <span class="badge ' + getScoreBadgeClass(eval.EmotionalImpactScore) + '">' + eval.EmotionalImpactScore + '/10</span></li>';
                    if (eval.EmotionalImpactDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.EmotionalImpactDefects + '</small></li>';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Azione/Ritmo:</span> <span class="badge ' + getScoreBadgeClass(eval.ActionScore) + '">' + eval.ActionScore + '/10</span></li>';
                    if (eval.ActionDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.ActionDefects + '</small></li>';
                    html += '</ul></div>';
                    
                    html += '</div>'; // close row
                    
                    html += '</div></div>'; // close card-body and card
                    // Add delete button
                    html += '<div class="text-end mb-3">';
                    html += '<button class="btn btn-sm btn-outline-danger delete-eval-btn" data-eval-id="' + eval.Id + '" data-story-id="' + storyId + '">Elimina valutazione</button>';
                    html += '</div>';
                });
                
                html += '</div>';
                return html;
            }

            // Handle delete evaluation button clicks (delegated)
            $(document).on('click', '.delete-eval-btn', function (e) {
                e.preventDefault();
                var btn = $(this);
                var evalId = btn.data('eval-id');
                var storyId = btn.data('story-id');
                if (!evalId) return;

                Swal.fire({
                    title: 'Eliminare la valutazione?',
                    text: 'Questa azione rimuover√† la valutazione dal database.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Elimina',
                    cancelButtonText: 'Annulla',
                    customClass: { popup: 'swal2-small', confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary' },
                    buttonsStyling: false,
                    width: 420
                }).then(function(result) {
                    if (!result.isConfirmed) return;
                    var fd = new FormData();
                    fd.append('id', evalId);
                    fd.append('storyId', storyId || '0');
                    // Add anti-forgery token
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    if (token) {
                        fd.append('__RequestVerificationToken', token);
                    }
                    fetch('?handler=DeleteEvaluation', { method: 'POST', body: fd })
                        .then(r => { if (r.redirected) window.location = r.url; else window.location.reload(); })
                        .catch(err => { Swal.fire('Errore', 'Impossibile eliminare la valutazione: ' + err, 'error'); });
                });
            });

            const columnVisibilityKey = 'storiesTable_visibleColumns';
            let storedVisibility = {};
            try {
                const saved = localStorage.getItem(columnVisibilityKey);
                if (saved) {
                    storedVisibility = JSON.parse(saved) || {};
                }
            } catch (err) {
                console.warn('Unable to parse stored column visibility', err);
                storedVisibility = {};
            }

            var table = $('#storiesTable').DataTable({
                pageLength: 25,
                lengthChange: true,
                stateSave: true,
                stateSaveName: 'DataTables_stories',
                stateDuration: -1,
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: 'Test TTS Schema',
                        className: 'btn btn-light btn-sm',
                        action: function(e, dt, node, config) {
                            var sid = prompt('Story ID:', '32');
                            if (sid && sid.trim()) {
                                $('#testTtsStoryIdInput').val(sid.trim());
                                $('#testTtsSchemaForm').submit();
                            }
                        }
                    },
                    {
                        text: 'Valuta tutti',
                        className: 'btn btn-light btn-sm dropdown-toggle',
                        attr: { 'data-bs-toggle': 'dropdown' },
                        init: function(dt, node, config) {
                            var $btn = $(node);
                            var $ul = $('<ul class="dropdown-menu dropdown-menu-end"></ul>');
                            $('#bulkEvaluatorDropdown .bulk-eval-item').each(function() {
                                var agentId = $(this).data('agent-id');
                                var agentName = $(this).data('agent-name');
                                var agentRole = $(this).data('agent-role');
                                var $li = $('<li><button class="dropdown-item" type="button">' + agentName + ' (' + agentRole + ')</button></li>');
                                $li.find('button').on('click', function() {
                                    $('<form method="post" action="?handler=EvaluateAll"><input type="hidden" name="agentId" value="' + agentId + '" /><input type="hidden" name="__RequestVerificationToken" value="' + $('input[name=__RequestVerificationToken]').val() + '" /></form>').appendTo('body').submit();
                                });
                                $ul.append($li);
                            });
                            if ($ul.children().length === 0) {
                                $ul.append('<li><span class="dropdown-item text-muted">Nessun evaluator attivo</span></li>');
                            }
                            $btn.after($ul);
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'Columns',
                        className: 'btn btn-light btn-sm'
                    }
                ],
                columnDefs: [
                    { orderable: false, targets: 0 },
                    { orderable: false, targets: -1 }
                ]
            });

            // Apply stored column visibility preferences
            table.columns().every(function () {
                const idx = this.index();
                if (Object.prototype.hasOwnProperty.call(storedVisibility, idx)) {
                    this.visible(storedVisibility[idx]);
                }
            });

            // Coherence details: fetch from API and show in modal
            $(document).on('click', '.coherence-details-btn', function(e) {
                e.preventDefault();
                var storyId = $(this).data('story-id');
                if (!storyId) return;
                var modal = new bootstrap.Modal(document.getElementById('coherenceModal'));
                $('#coherenceModalBody').html('<div class="text-center text-muted">Caricamento...</div>');
                modal.show();

                fetch('/api/TestAutomation/coherence/' + storyId)
                    .then(function(res) { return res.json(); })
                    .then(function(data) {
                        if (!data || !data.success) {
                            $('#coherenceModalBody').html('<div class="alert alert-danger">Impossibile ottenere i dati di coerenza.</div>');
                            return;
                        }

                        var html = '';
                        html += '<div class="mb-3">';
                        html += '<strong>Story ID:</strong> ' + data.storyId + '<br/>';
                        html += '<strong>Chunk facts:</strong> ' + (data.chunkFactsCount || 0) + ' &middot; <strong>Coherence scores:</strong> ' + (data.coherenceScoresCount || 0) + '<br/>';
                        if (data.globalCoherence) {
                            html += '<div class="mt-2"><strong>Global coherence:</strong> ' + (data.globalCoherence.value != null ? data.globalCoherence.value.toFixed(3) : '-') + ' (' + (data.globalCoherence.chunkCount || 0) + ' chunk)</div>';
                            if (data.globalCoherence.notes) html += '<div class="text-muted small">' + data.globalCoherence.notes + '</div>';
                        }
                        html += '</div>';

                        // Chunk facts table
                        html += '<h6>Chunk Facts</h6>';
                        html += '<div class="table-responsive"><table class="table table-sm table-bordered datatable"><thead><tr><th>Chunk</th><th>Has facts</th><th>Facts</th></tr></thead><tbody>';
                        (data.chunkFacts || []).forEach(function(cf) {
                            var pretty = cf.factsJson ? '<pre style="white-space:pre-wrap;">' + JSON.stringify(JSON.parse(cf.factsJson), null, 2) + '</pre>' : '<em>--</em>';
                            html += '<tr><td>' + cf.chunkNumber + '</td><td>' + (cf.hasFacts ? '‚úÖ' : '‚ùå') + '</td><td>' + pretty + '</td></tr>';
                        });
                        html += '</tbody></table></div>';

                        // Coherence scores table
                        html += '<h6 class="mt-3">Coherence Scores</h6>';
                        html += '<div class="table-responsive"><table class="table table-sm table-bordered datatable"><thead><tr><th>Chunk</th><th>Local</th><th>Global</th><th>Has Errors</th></tr></thead><tbody>';
                        (data.coherenceScores || []).forEach(function(cs) {
                            html += '<tr><td>' + cs.chunkNumber + '</td><td>' + (cs.localCoherence != null ? cs.localCoherence.toFixed(3) : '-') + '</td><td>' + (cs.globalCoherence != null ? cs.globalCoherence.toFixed(3) : '-') + '</td><td>' + (cs.hasErrors ? '‚ö†Ô∏è' : '') + '</td></tr>';
                        });
                        html += '</tbody></table></div>';

                        $('#coherenceModalBody').html(html);
                    })
                    .catch(function(err) {
                        $('#coherenceModalBody').html('<div class="alert alert-danger">Errore durante la richiesta: ' + err + '</div>');
                    });
            });

            table.on('column-visibility.dt', function (e, settings, column, state) {
                storedVisibility[column] = state;
                try {
                    localStorage.setItem(columnVisibilityKey, JSON.stringify(storedVisibility));
                } catch (err) {
                    console.warn('Unable to persist column visibility', err);
                }
            });

            // TTS playlist playback (sequence with 2s gap)
            var ttsAudio = document.getElementById('ttsPlaylistAudio');
            var ttsQueue = [];
            var ttsGapMs = 2000;
            var ttsIndex = 0;
            var ttsPlaying = false;
            var ttsStopRequested = false;
            var ttsCurrentBtn = null;

            function resetTtsState() {
                ttsQueue = [];
                ttsIndex = 0;
                ttsPlaying = false;
                ttsStopRequested = false;
                if (ttsCurrentBtn) {
                    ttsCurrentBtn.textContent = '‚ñ∂Ô∏è Ascolta sequenza TTS';
                    ttsCurrentBtn.classList.remove('text-danger');
                    ttsCurrentBtn = null;
                }
            }

            function playNextTts() {
                if (ttsStopRequested || ttsIndex >= ttsQueue.length) {
                    resetTtsState();
                    return;
                }
                var item = ttsQueue[ttsIndex];
                ttsAudio.src = item.url;
                ttsAudio.play().catch(function(err){
                    console.warn('Errore riproduzione TTS', err);
                    // Skip on error
                    ttsIndex++;
                    setTimeout(playNextTts, ttsGapMs);
                });
            }

            ttsAudio.addEventListener('ended', function(){
                if (ttsStopRequested) {
                    resetTtsState();
                    return;
                }
                ttsIndex++;
                setTimeout(playNextTts, ttsGapMs);
            });

            $(document).on('click', '.tts-playlist-btn', function(e){
                e.preventDefault();
                var btn = this;
                var storyId = $(btn).data('story-id');
                if (!storyId) return;

                // Toggle stop
                if (ttsPlaying && ttsCurrentBtn === btn) {
                    ttsStopRequested = true;
                    ttsAudio.pause();
                    ttsAudio.currentTime = 0;
                    resetTtsState();
                    return;
                }

                fetch(`?handler=TtsPlaylist&id=${storyId}`)
                    .then(function(res){
                        if (!res.ok) throw new Error('HTTP ' + res.status);
                        return res.json();
                    })
                    .then(function(data){
                        if (!data || !data.items || data.items.length === 0) {
                            alert('Nessuna traccia TTS disponibile per questa storia.');
                            return;
                        }
                        ttsQueue = data.items;
                        ttsGapMs = data.gapMs || 2000;
                        ttsIndex = 0;
                        ttsStopRequested = false;
                        ttsPlaying = true;
                        ttsCurrentBtn = btn;
                        btn.textContent = '‚èπÔ∏è Stop TTS';
                        btn.classList.add('text-danger');
                        playNextTts();
                    })
                    .catch(function(err){
                        console.error('Errore caricamento playlist TTS', err);
                        alert('Impossibile avviare la riproduzione TTS.');
                    });
            });

            // Handle expand/collapse for evaluation details using DataTables child rows API
            $('#storiesTable tbody').on('click', 'td.dt-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);
                
                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                    $(this).removeClass('open');
                } else {
                    // Open this row
                    var evaluationsJson = tr.attr('data-evaluations');
                    var evaluations = evaluationsJson ? JSON.parse(evaluationsJson) : [];
                    var storyId = tr.data('story-id');
                    row.child(formatEvaluations(evaluations, storyId)).show();
                    tr.addClass('shown');
                    $(this).addClass('open');
                }
            });

            // Intercept submit on delete forms and show SweetAlert2 confirmation
            $('form.delete-story-form').on('submit', function (e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: 'Eliminare la storia?',
                    text: 'Questa azione non √® reversibile.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Elimina',
                    cancelButtonText: 'Annulla',
                    customClass: { popup: 'swal2-small', confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary' },
                    buttonsStyling: false,
                    width: 420
                }).then(function(result) {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });

                // Manual evaluation flow: open SweetAlert2 modal to collect score + overall text
                $(document).on('click', '.manual-eval-btn', function(e){
                    e.preventDefault();
                    var storyId = $(this).data('story-id');
                    Swal.fire({
                        title: 'Valutazione manuale',
                        html: '<div class="mb-2">Punteggio totale (0-100):</div><input id="swal-score" type="number" min="0" max="100" class="swal2-input" placeholder="Es. 85">' +
                              '<div class="mt-2">Valutazione complessiva (opzionale):</div><textarea id="swal-overall" class="swal2-textarea" placeholder="Breve commento"></textarea>',
                        focusConfirm: false,
                        showCancelButton: true,
                        confirmButtonText: 'Salva valutazione',
                        cancelButtonText: 'Annulla',
                        customClass: { popup: 'swal2-small', confirmButton: 'btn btn-primary', cancelButton: 'btn btn-secondary' },
                        preConfirm: () => {
                            const scoreVal = document.getElementById('swal-score').value;
                            const overallVal = document.getElementById('swal-overall').value || '';
                            if (scoreVal === '' || isNaN(scoreVal)) {
                                Swal.showValidationMessage('Inserisci un punteggio numerico (0-100)');
                                return false;
                            }
                            const score = parseFloat(scoreVal);
                            if (score < 0 || score > 100) {
                                Swal.showValidationMessage('Il punteggio deve essere compreso tra 0 e 100');
                                return false;
                            }
                            return { score: score, overall: overallVal };
                        }
                    }).then((result) => {
                        if (result.isConfirmed && result.value) {
                            const data = new FormData();
                            data.append('id', storyId);
                            data.append('score', result.value.score);
                            data.append('overall', result.value.overall);
                            // Add anti-forgery token
                            var token = $('input[name="__RequestVerificationToken"]').val();
                            if (token) {
                                data.append('__RequestVerificationToken', token);
                            }
                            fetch('?handler=ManualEvaluate', { method: 'POST', body: data })
                                .then(r => { if (r.redirected) window.location = r.url; else window.location.reload(); })
                                .catch(e => { Swal.fire('Errore', 'Impossibile salvare la valutazione: ' + e, 'error'); });
                        }
                    });
                });
        });
    </script>
}
