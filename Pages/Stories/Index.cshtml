@page
@model TinyGenerator.Pages.Stories.IndexModel
@{
    ViewData["Title"] = "Storie";
    ViewData["PageDescription"] = "Visualizza e gestisci le storie salvate";
}

<div class="d-flex justify-content-between mb-3">
    <h3>Storie salvate</h3>
    <div>
        <a class="btn btn-primary" asp-page="/Stories/Create">Nuova storia</a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}

<table id="storiesTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Timestamp</th>
            <th>Prompt</th>
            <th>Status</th>
            <th>Modello</th>
            <th>Cartella</th>
            <th>Caratteri</th>
            <th>Test</th>
            <th>Score</th>
            <th>Valutazione</th>
            <th>Approved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var s in Model.Stories) {
        var timestamp = DateTime.TryParse(s.Timestamp, out var dt) ? dt.ToString("dd/MM/yyyy HH:mm") : s.Timestamp;
        var nextStatus = Model.GetNextStatus(s);
        <tr data-story-id="@s.Id" data-evaluations='@System.Text.Json.JsonSerializer.Serialize(s.Evaluations)'>
            <td class="dt-control"></td>
            <td>@s.Id</td>
            <td>@timestamp</td>
            <td style="max-width:320px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap">@s.Prompt</td>
            <td>
                @if (s.StatusId.HasValue)
                {
                    var bgColor = string.IsNullOrWhiteSpace(s.StatusColor) ? "#6c757d" : s.StatusColor;
                    var label = !string.IsNullOrWhiteSpace(s.StatusDescription) ? s.StatusDescription : (!string.IsNullOrWhiteSpace(s.Status) ? s.Status : "N/D");
                    <span class="badge" style="background-color:@bgColor;" title="@s.Status">@label</span>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>@s.Model</td>
            <td>@(s.Folder ?? "-")</td>
            <td>@s.CharCount.ToString("N0")</td>
            <td>
                @if (s.TestRunId.HasValue && s.TestStepId.HasValue)
                {
                    <a href="/Models?runId=@s.TestRunId" class="badge bg-success" title="Test Run ID: @s.TestRunId, Step ID: @s.TestStepId">‚úì Run @s.TestRunId</a>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>@s.Score</td>
            <td>@(s.Evaluations.Any() ? $"{(s.Evaluations.Average(e => e.TotalScore) * 100.0 / 40.0):F1}/100" : "-")</td>
            <td>@(s.Approved ? "‚úÖ" : "‚ùå")</td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Azioni
                    </button>
                    <ul class="dropdown-menu">
                        @if (nextStatus != null && !string.IsNullOrWhiteSpace(nextStatus.OperationType))
                        {
                            <li>
                                <form method="post" asp-page-handler="AdvanceStatus" asp-route-id="@s.Id" style="display:inline">
                                    <button type="submit" class="dropdown-item">
                                        ‚öôÔ∏è @(nextStatus.CaptionToExecute ?? nextStatus.Description ?? $"Avanza a {nextStatus.Code}")
                                    </button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        }
                        <li><a class="dropdown-item" asp-page="/Stories/Details" asp-route-id="@s.Id">üìÑ Dettagli</a></li>
                        <li><a class="dropdown-item" asp-page="/Stories/Edit" asp-route-id="@s.Id">‚úèÔ∏è Modifica</a></li>
                        @if (!string.IsNullOrWhiteSpace(s.Folder))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-page-handler="GenerateTtsJson" asp-route-id="@s.Id" style="display:inline">
                                    <button type="submit" class="dropdown-item">üß± Genera JSON TTS</button>
                                </form>
                            </li>
                            <li>
                                <form method="post" asp-page-handler="GenerateTts" asp-route-id="@s.Id" asp-route-folderName="@s.Folder" style="display:inline">
                                    <button type="submit" class="dropdown-item">üîä Genera TTS</button>
                                </form>
                            </li>
                            @if (s.HasVoiceSource)
                            {
                                <li>
                                    <form method="post" asp-page-handler="AssignVoices" asp-route-id="@s.Id" style="display:inline">
                                        <button type="submit" class="dropdown-item">üéôÔ∏è Assegna voci</button>
                                    </form>
                                </li>
                            }
                        }
                        @if (Model.Evaluators.Any())
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header">Valuta con agente</h6></li>
                            @foreach (var evaluator in Model.Evaluators)
                            {
                                <li>
                                    <form method="post" asp-page-handler="Evaluate" asp-route-id="@s.Id" asp-route-agentId="@evaluator.Id" style="display:inline">
                                        <button type="submit" class="dropdown-item">ü§ñ @evaluator.Name</button>
                                    </form>
                                </li>
                            }
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id" class="delete-story-form" style="display:inline">
                                <button type="submit" class="dropdown-item text-danger">üóëÔ∏è Elimina</button>
                            </form>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item manual-eval-btn" data-story-id="@s.Id">‚úçÔ∏è Valutazione manuale</a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/buttons.bootstrap5.min.css" />
    <!-- SweetAlert2 (compact confirmation) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <style>
        /* SweetAlert2 compact popup styled to match Bootstrap */
        .swal2-popup.swal2-small {
            width: 420px !important;
            padding: 1rem 1.25rem !important;
            border-radius: .375rem !important;
            font-size: .95rem !important;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
        /* Layout: icon in left column, title+content stacked in right column */
        .swal2-popup.swal2-small {
            display: grid !important;
            grid-template-columns: 40px 1fr !important;
            grid-template-rows: auto auto auto !important;
            gap: 6px 12px !important;
            align-items: start !important;
        }
        .swal2-popup.swal2-small .swal2-icon {
            grid-column: 1 / 2 !important;
            grid-row: 1 / 3 !important;
            justify-self: center !important;
            align-self: start !important;
            width: 32px !important;
            height: 32px !important;
            font-size: 14px !important;
            margin: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-title {
            grid-column: 2 / 3 !important;
            grid-row: 1 / 2 !important;
            text-align: left !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-content {
            grid-column: 2 / 3 !important;
            grid-row: 2 / 3 !important;
            text-align: left !important;
            margin: 0 !important;
            padding-top: 4px !important;
        }
        /* Place action buttons on a dedicated row, centered horizontally */
        .swal2-popup.swal2-small .swal2-actions {
            grid-column: 1 / -1 !important;
            grid-row: 3 / 4 !important;
            display: flex !important;
            justify-content: center !important;
            gap: .5rem !important;
            padding-top: .5rem !important;
        }
        .swal2-popup.swal2-small .swal2-actions .swal2-confirm,
        .swal2-popup.swal2-small .swal2-actions .swal2-cancel {
            margin: 0 !important;
        }
        .swal2-popup.swal2-small .swal2-title {
            font-size: 1rem !important;
            margin-bottom: .25rem !important;
        }
        .swal2-popup.swal2-small .swal2-actions .btn {
            min-width: 86px;
            margin: 0 .25rem;
        }
        /* Custom gold badge color for scores 8-10 */
        .bg-gold {
            background-color: #ffd700 !important;
            color: #000 !important;
        }
    </style>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables/js/buttons.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function() {
            // Function to get badge color based on score
            function getScoreBadgeClass(score) {
                if (score >= 0 && score <= 1) return 'bg-danger'; // rosso
                if (score >= 2 && score <= 3) return 'bg-danger'; // arancio
                if (score >= 4 && score <= 5) return 'bg-warning'; // giallo (usando info come giallo chiaro)
                if (score >= 6 && score <= 7) return 'bg-success'; // verde
                if (score >= 8 && score <= 10) return 'bg-success text-warning'; // verde
                return 'bg-secondary'; // default
            }

            // Format function for child rows (evaluations)
            function formatEvaluations(evaluations, storyId) {
                if (!evaluations || evaluations.length === 0) {
                    return '<div class="p-3"><em>Nessuna valutazione disponibile</em></div>';
                }
                
                var html = '<div class="p-3"><h5>Valutazioni complete</h5>';
                
                evaluations.forEach(function(eval) {
                    html += '<div class="card mb-3">';
                    html += '<div class="card-header d-flex justify-content-between align-items-start">';
                    html += '<div>';
                    html += '<strong>' + (eval.Model || 'N/A') + '</strong>';
                    if (eval.AgentName) {
                        html += ' <small class="text-muted">by ' + eval.AgentName + '</small>';
                    }
                    if (eval.AgentModel) {
                        html += ' <small class="text-muted">(' + eval.AgentModel + ')</small>';
                    }
                    html += '<div><small class="text-muted">' + (eval.Ts || '') + '</small></div>';
                    html += '</div>';
                    html += '<div class="text-end">Totale: <span class="badge bg-primary">' + eval.TotalScore + '/40</span></div>';
                    html += '</div>';
                    html += '<div class="card-body"><div class="row">';
                    
                    // Left column
                    html += '<div class="col-md-6"><ul class="list-group list-group-flush">';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Coerenza narrativa:</span> <span class="badge ' + getScoreBadgeClass(eval.NarrativeCoherenceScore) + '">' + eval.NarrativeCoherenceScore + '/10</span></li>';
                    if (eval.NarrativeCoherenceDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.NarrativeCoherenceDefects + '</small></li>';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Originalit√†:</span> <span class="badge ' + getScoreBadgeClass(eval.OriginalityScore) + '">' + eval.OriginalityScore + '/10</span></li>';
                    if (eval.OriginalityDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.OriginalityDefects + '</small></li>';
                    html += '</ul></div>';
                    
                    // Right column
                    html += '<div class="col-md-6"><ul class="list-group list-group-flush">';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Impatto emotivo:</span> <span class="badge ' + getScoreBadgeClass(eval.EmotionalImpactScore) + '">' + eval.EmotionalImpactScore + '/10</span></li>';
                    if (eval.EmotionalImpactDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.EmotionalImpactDefects + '</small></li>';
                    html += '<li class="list-group-item d-flex justify-content-between"><span>Azione/Ritmo:</span> <span class="badge ' + getScoreBadgeClass(eval.ActionScore) + '">' + eval.ActionScore + '/10</span></li>';
                    if (eval.ActionDefects) html += '<li class="list-group-item"><small class="text-muted">' + eval.ActionDefects + '</small></li>';
                    html += '</ul></div>';
                    
                    html += '</div>'; // close row
                    
                    html += '</div></div>'; // close card-body and card
                    // Add delete button
                    html += '<div class="text-end mb-3">';
                    html += '<button class="btn btn-sm btn-outline-danger delete-eval-btn" data-eval-id="' + eval.Id + '" data-story-id="' + storyId + '">Elimina valutazione</button>';
                    html += '</div>';
                });
                
                html += '</div>';
                return html;
            }

            // Handle delete evaluation button clicks (delegated)
            $(document).on('click', '.delete-eval-btn', function (e) {
                e.preventDefault();
                var btn = $(this);
                var evalId = btn.data('eval-id');
                var storyId = btn.data('story-id');
                if (!evalId) return;

                Swal.fire({
                    title: 'Eliminare la valutazione?',
                    text: 'Questa azione rimuover√† la valutazione dal database.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Elimina',
                    cancelButtonText: 'Annulla',
                    customClass: { popup: 'swal2-small', confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary' },
                    buttonsStyling: false,
                    width: 420
                }).then(function(result) {
                    if (!result.isConfirmed) return;
                    var fd = new FormData();
                    fd.append('id', evalId);
                    fd.append('storyId', storyId || '0');
                    fetch('?handler=DeleteEvaluation', { method: 'POST', body: fd })
                        .then(r => { if (r.redirected) window.location = r.url; else window.location.reload(); })
                        .catch(err => { Swal.fire('Errore', 'Impossibile eliminare la valutazione: ' + err, 'error'); });
                });
            });

            const columnVisibilityKey = 'storiesTable_visibleColumns';
            let storedVisibility = {};
            try {
                const saved = localStorage.getItem(columnVisibilityKey);
                if (saved) {
                    storedVisibility = JSON.parse(saved) || {};
                }
            } catch (err) {
                console.warn('Unable to parse stored column visibility', err);
                storedVisibility = {};
            }

            var table = $('#storiesTable').DataTable({
                pageLength: 25,
                lengthChange: true,
                stateSave: true,
                stateSaveName: 'DataTables_stories',
                stateDuration: -1,
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    'colvis'
                ],
                columnDefs: [
                    { orderable: false, targets: 0 },
                    { orderable: false, targets: -1 }
                ]
            });

            // Apply stored column visibility preferences
            table.columns().every(function () {
                const idx = this.index();
                if (Object.prototype.hasOwnProperty.call(storedVisibility, idx)) {
                    this.visible(storedVisibility[idx]);
                }
            });

            table.on('column-visibility.dt', function (e, settings, column, state) {
                storedVisibility[column] = state;
                try {
                    localStorage.setItem(columnVisibilityKey, JSON.stringify(storedVisibility));
                } catch (err) {
                    console.warn('Unable to persist column visibility', err);
                }
            });

            // Handle expand/collapse for evaluation details using DataTables child rows API
            $('#storiesTable tbody').on('click', 'td.dt-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);
                
                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                    $(this).removeClass('open');
                } else {
                    // Open this row
                    var evaluationsJson = tr.attr('data-evaluations');
                    var evaluations = evaluationsJson ? JSON.parse(evaluationsJson) : [];
                    var storyId = tr.data('story-id');
                    row.child(formatEvaluations(evaluations, storyId)).show();
                    tr.addClass('shown');
                    $(this).addClass('open');
                }
            });

            // Intercept submit on delete forms and show SweetAlert2 confirmation
            $('form.delete-story-form').on('submit', function (e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: 'Eliminare la storia?',
                    text: 'Questa azione non √® reversibile.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Elimina',
                    cancelButtonText: 'Annulla',
                    customClass: { popup: 'swal2-small', confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary' },
                    buttonsStyling: false,
                    width: 420
                }).then(function(result) {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });

                // Manual evaluation flow: open SweetAlert2 modal to collect score + overall text
                $(document).on('click', '.manual-eval-btn', function(e){
                    e.preventDefault();
                    var storyId = $(this).data('story-id');
                    Swal.fire({
                        title: 'Valutazione manuale',
                        html: '<div class="mb-2">Punteggio totale (0-100):</div><input id="swal-score" type="number" min="0" max="100" class="swal2-input" placeholder="Es. 85">' +
                              '<div class="mt-2">Valutazione complessiva (opzionale):</div><textarea id="swal-overall" class="swal2-textarea" placeholder="Breve commento"></textarea>',
                        focusConfirm: false,
                        showCancelButton: true,
                        confirmButtonText: 'Salva valutazione',
                        cancelButtonText: 'Annulla',
                        customClass: { popup: 'swal2-small', confirmButton: 'btn btn-primary', cancelButton: 'btn btn-secondary' },
                        preConfirm: () => {
                            const scoreVal = document.getElementById('swal-score').value;
                            const overallVal = document.getElementById('swal-overall').value || '';
                            if (scoreVal === '' || isNaN(scoreVal)) {
                                Swal.showValidationMessage('Inserisci un punteggio numerico (0-100)');
                                return false;
                            }
                            const score = parseFloat(scoreVal);
                            if (score < 0 || score > 100) {
                                Swal.showValidationMessage('Il punteggio deve essere compreso tra 0 e 100');
                                return false;
                            }
                            return { score: score, overall: overallVal };
                        }
                    }).then((result) => {
                        if (result.isConfirmed && result.value) {
                            const data = new FormData();
                            data.append('id', storyId);
                            data.append('score', result.value.score);
                            data.append('overall', result.value.overall);
                            fetch('?handler=ManualEvaluate', { method: 'POST', body: data })
                                .then(r => { if (r.redirected) window.location = r.url; else window.location.reload(); })
                                .catch(e => { Swal.fire('Errore', 'Impossibile salvare la valutazione: ' + e, 'error'); });
                        }
                    });
                });
        });
    </script>
}
