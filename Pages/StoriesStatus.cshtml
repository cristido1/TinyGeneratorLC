@page "/StoriesStatus/legacy"
@model TinyGenerator.Pages.StoriesStatusModel
@{
    ViewData["Title"] = "Stories Status";
}

<div class="container-fluid mt-3">
    <div class="d-flex align-items-center mb-3">
        <div>
            <h2 class="mb-0">Storie â€” Stato</h2>
            <small class="text-muted">Pannello di monitoraggio delle storie generate</small>
        </div>
        <div class="ms-auto">
            <div class="btn-toolbar" role="toolbar">
                <div class="input-group me-2">
                    <input id="globalFilter" type="search" class="form-control" placeholder="Cerca..." aria-label="Cerca">
                    <button id="clearFilter" class="btn btn-outline-secondary">Clear</button>
                </div>
                <div class="btn-group me-2">
                    <button id="columnToggle" class="btn btn-outline-primary">Colonne</button>
                    <button id="refreshBtn" class="btn btn-outline-secondary">Refresh</button>
                    <a class="btn btn-primary" href="/Stories/Create">Nuova storia</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div id="gridToolbar" class="mb-2 d-flex align-items-center">
                <div class="me-3">Page size:
                    <select id="pageSizeSelect" class="form-select form-select-sm d-inline-block" style="width: auto;">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div class="ms-auto">
                    <button id="prevPage" class="btn btn-sm btn-outline-secondary me-1">Prev</button>
                    <button id="nextPage" class="btn btn-sm btn-outline-secondary">Next</button>
                    <span class="ms-2" id="paginationInfo"></span>
                </div>
            </div>

            <div id="storiesGrid" class="ag-theme-alpine" style="height:600px;width:100%;"></div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/ag-grid-community/dist/styles/ag-grid.css" />
    <link rel="stylesheet" href="https://unpkg.com/ag-grid-community/dist/styles/ag-theme-alpine.css" />
    <script src="https://unpkg.com/ag-grid-community/dist/ag-grid-community.min.noStyle.js"></script>
    <script src="/js/storiesstatus.js"></script>
}
