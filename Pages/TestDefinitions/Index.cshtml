@page
@model TinyGenerator.Pages.TestDefinitions.IndexModel
@{
    ViewData["Title"] = "Test Definitions";
    ViewData["PageDescription"] = "Crea e gestisci le definizioni dei test";
}

<div class="page-wrapper">
    <div class="d-flex mb-2 align-items-center toolbar-row">
        <form method="get" class="d-flex" style="gap:.5rem;">
            <input name="search" value="" class="form-control form-control-sm" style="max-width:220px;" placeholder="Cerca..." />
            <button type="submit" class="btn btn-sm btn-outline-primary">Cerca</button>
        </form>
        <div class="ms-auto d-flex gap-1 align-items-center">
            <div class="form-check me-2">
                <input class="form-check-input" type="checkbox" id="chkShowDisabled" checked="@Model.ShowDisabled" onchange="window.location.href='?ShowDisabled=' + (this.checked ? 'true' : 'false');" />
                <label class="form-check-label" for="chkShowDisabled">Show Disabled</label>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Colonne visibili">Colonne</button>
                <ul class="dropdown-menu dropdown-menu-end" id="testDefsGridColVisMenu" style="min-width: 180px;"></ul>
            </div>
            <button id="refreshBtn" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">Refresh</button>
            <a class="btn btn-sm btn-primary" asp-page="./Edit">Nuovo</a>
        </div>
    </div>

    <div class="border p-2 rounded">
        <table class="table table-sm mb-0">
            <thead>
                <tr>
                    <th data-col="group">Group</th>
                    <th data-col="library">Library</th>
                    <th data-col="function">Function</th>
                    <th data-col="priority">Priority</th>
                    <th data-col="timeout">Timeout (s)</th>
                    <th data-col="testType">Test Type</th>
                    <th data-col="allowedPlugins">Allowed Plugins</th>
                    <th data-col="responseFormat">Response Format</th>
                    <th data-col="executionPlan">Execution Plan</th>
                    <th data-col="active">Active</th>
                    <th data-col="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Definitions != null && Model.Definitions.Count > 0)
                {
                    foreach (var d in Model.Definitions)
                    {
                        <tr>
                            <td data-col="group">@d.GroupName</td>
                            <td data-col="library">@d.Library</td>
                            <td data-col="function">@d.FunctionName</td>
                            <td data-col="priority">@d.Priority</td>
                            <td data-col="timeout">@(d.TimeoutSecs > 0 ? d.TimeoutSecs.ToString() : "")</td>
                            <td data-col="testType">@d.TestType</td>
                            <td data-col="allowedPlugins">@d.AllowedPlugins</td>
                            <td data-col="responseFormat">@d.JsonResponseFormat</td>
                            <td data-col="executionPlan">@d.ExecutionPlan</td>
                            <td data-col="active">@(d.Active ? "Yes" : "No")</td>
                            <td data-col="actions">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown">Azioni</button>
                                    <div class="dropdown-menu p-2">
                                        <a class="dropdown-item" href="/TestDefinitions/Edit?id=@d.Id">Edit</a>
                                        <a class="dropdown-item" href="/TestDefinitions/Delete?id=@d.Id">Delete</a>
                                        <a class="dropdown-item preview-prompt" href="#" data-id="@d.Id">Show Prompt</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="11">No test definitions</td></tr>
                }
            </tbody>
        </table>
    </div>

    <div id="pager" class="mt-2"></div>
</div>

<!-- Details Modal for Prompt -->
<div class="modal fade" id="promptModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Prompt Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="promptModalBody">
                <pre class="bg-light p-3" style="white-space:pre-wrap;word-break:break-word;font-size:0.9rem;"></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/shared/list-ui.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Preview prompt handler: read prompt from server-side rendered dataset via data-id lookup
            document.querySelectorAll('.preview-prompt').forEach(btn => {
                btn.addEventListener('click', e => {
                    e.preventDefault();
                    const id = parseInt(btn.getAttribute('data-id'));
                    // find the matching definition in the DOM (simple search)
                    const row = btn.closest('tr');
                    // server-side we didn't render the full prompt to avoid long cells; fetch via endpoint if needed
                    fetch('/TestDefinitions/DetailsPrompt?id=' + id).then(r => r.text()).then(txt => {
                        document.querySelector('#promptModalBody pre').textContent = txt || 'No prompt';
                        new bootstrap.Modal(document.getElementById('promptModal')).show();
                    }).catch(err => {
                        console.error(err);
                        showError('Error', 'Unable to fetch prompt');
                    });
                });
            });

            // Initialize column visibility menu from data-col
            if (window.listUi && typeof window.listUi.init === 'function') {
                window.listUi.init(document, { storageKey: 'testdefs_cols_v1' });
            }
        });
    </script>
}
